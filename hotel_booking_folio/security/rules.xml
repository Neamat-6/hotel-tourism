<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="booking_folio_comp_rule" model="ir.rule">
            <field name="name">Folio multi company rule</field>
            <field name="model_id" ref="model_booking_folio"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="booking_folio_line_comp_rule" model="ir.rule">
            <field name="name">Folio Line multi company rule</field>
            <field name="model_id" ref="hotel_booking.model_booking_folio_line"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>