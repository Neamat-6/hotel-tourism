<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="availability_report_paperformat" model="report.paperformat">
            <field name="name">Availability By Room Type Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="action_tb_availability_report">
            <field name="name">Availability By Room Type</field>
            <field name="model">room.type.availability.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking_folio.tb_availability_report</field>
            <field name="report_file">hotel_booking_folio.tb_availability_report</field>
            <field name="binding_model_id" ref="model_room_type_availability_report"/>
            <field name="paperformat_id" ref="availability_report_paperformat"/>
        </record>
        <template id="tb_availability_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-foreach="docs" t-as="doc">
                            <h4 class="text-center">Availability By Room Type</h4>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="color: black;">Room Type</th>
                                        <th class="text-center" style="color: black;">Date</th>
                                        <th class="text-center" style="color: black;">Qty Available</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-field="line.room_type_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.date"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.qty_available"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
