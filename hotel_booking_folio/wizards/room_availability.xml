<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="room_available_wizard_view_form" model="ir.ui.view">
        <field name="name">room_available_wizard_view_form</field>
        <field name="model">room.available.wizard</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <group>
                            <field name="hotel_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                        </group>
                        <group>
                            <field name="audit_date"/>
                        </group>
                    </group>

                    <div class="row">
                        <div class="col-5"/>
                        <div class="col-7">
                            <button name="action_check_availability" type="object" string="Check Availability" class="oe_highlight" icon="fa-search"/>
                        </div>
                    </div>
                    <group string="Room Availability">
                        <field name="line_ids" readonly="1" nolabel="1" colspan="4" widget="one2many_list" force_save="1">
                            <tree editable="bottom" create="false" edit="false">
                                <field name="room_id"/>
                                <field name="room_type_id"/>
                                <field name="total_beds"/>
                                <field name="assigned_beds"/>
                                <field name="available_beds"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Print PDF" type="object"  name="action_generate_pdf" class="oe_highlight" />
                        <button string="Print XLS" type="object"  name="action_generate_xls" class="oe_highlight" />
                    </footer>
                </sheet>

            </form>
        </field>
    </record>

        <record id="room_available_wizard_action" model="ir.actions.act_window">
            <field name="name">Room Availability</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.available.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="room_available_wizard_menu" name="Room Availability"
                  parent="hotel_booking.booking_reports_root_front_office"
                  action="room_available_wizard_action" sequence="26"/>
    </data>
</odoo>