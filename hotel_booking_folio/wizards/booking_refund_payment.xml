<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_booking_refund_payment_form" model="ir.ui.view">
            <field name="name">booking.refund.payment.form</field>
            <field name="model">booking.refund.payment</field>
            <field name="arch" type="xml">
                <form string="Refund / Transfer Payment">
                    <group>
                        <group>
                            <field name="state" attrs="{'readonly': [('is_group_refunded', '=', True)]}"/>
                            <field name="is_group_refunded" invisible="1"/>
                            <field name="booking_ids" widget="many2many_tags" invisible="1"/>
                            <field name="booking_id" attrs="{'required': [('state', '=', 'transfer')]}"
                                   options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="booking_folio_ids" widget="many2many_tags" invisible="1"/>
                            <field name="folio_id" readonly="1"
                                   attrs="{'invisible': [('is_group_refunded', '=', True)]}"/>
                            <field name="transfer_folio_id"
                                   attrs="{'invisible': [('state', '!=', 'transfer')], 'required': [('state', '=', 'transfer')]}"
                                   options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="refund_status" attrs="{'invisible': [('state', '!=', 'refund')]}"/>
                            <field name="transfer_status" attrs="{'invisible': [('state', '!=', 'transfer')]}"/>
                            <field name="journal_id" attrs="{'invisible': [('state', '=', 'transfer')]}"/>
                            <field name="journal_partner_id" options="{'no_open': True, 'no_create': True}" required="0"
                                   attrs="{'invisible': [('is_city_ledger', '=', False)], 'required': [('is_city_ledger', '=', True)]}"/>
                            <field name="payment_method_line_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('hide_payment_method_line', '=', True)], 'required': [('state', '!=', 'transfer')]}" invisible="1"/>
                            <field name="hide_payment_method_line" invisible="1"/>
                            <field name="is_city_ledger" invisible="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="available_payment_method_line_ids" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_date" readonly="1"/>
                            <field name="total_amount"/>
                            <field name="refund_amount"
                                   attrs="{'invisible': ['|',('state', '!=', 'refund'),('refund_status','!=','partially_return')]}"/>
                            <field name="transfer_amount"
                                   attrs="{'invisible': ['|',('state', '!=', 'transfer'),('transfer_status','!=','partially_transfer')]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('is_group_refunded', '!=', True)]}">
                        <group>
                            <field name="booking_folio_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <div class="row" attrs="{'invisible': [('is_group_refunded', '!=', True)]}">
                        <div class="col-2"/>
                        <div class="col-2">
                            <button name="get_due_amount" type="object" string="Set Due Amount" class="oe_highlight"
                                    icon="fa-star"/>
                        </div>
                        <div class="col-2">
                            <button name="button_update_split" type="object" string="Get Folios" class="oe_highlight"
                                    icon="fa-star"/>
                        </div>
                        <div class="col-2">
                            <button name="distribute_total_amount" type="object" string="Distribute Amount"
                                    class="oe_highlight"
                                    icon="fa-star"/>
                        </div>

                    </div>
                    <notebook attrs="{'invisible': [('is_group_refunded', '!=', True)]}">
                        <page string="Split">
                            <field name="booking_refund_payment_line_ids">
                                <tree editable="bottom" delete="0" create="0">
                                    <field name="folio_id" readonly="1" force_save="1"/>
                                    <field name="due_amount"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Refund / Transfer Payment" name="action_refund_payments" type="object"
                                class="oe_highlight"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>