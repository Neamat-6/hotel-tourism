<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="manager_report_view_form" model="ir.ui.view">
            <field name="name">manager_report_view_form</field>
            <field name="model">hotel.manager.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="company_id" force_save="1" readonly="1"/>
                            <field name="date"/>
                            <field name="ptd"/>
                            <field name="ytd"/>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="button_search" type="object" string="Search" class="oe_highlight" icon="fa-search"/>
                            </div>
                        </div>
                        <notebook>
                            <page name="room_charge" string="Room Charge">
                                <field name="room_charge_line_ids">
                                    <tree create="0" edit="0" delete="0" editable="bottom">
                                        <field name="charge_type" force_save="1" readonly="1"/>
                                        <field name="date_total" force_save="1" readonly="1"/>
                                        <field name="ptd_total" force_save="1" readonly="1"/>
                                        <field name="ytd_total" force_save="1" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="extra_charge" string="Extra Charge">
                                <field name="extra_charge_line_ids">
                                    <tree create="0" edit="0" delete="0" editable="bottom">
                                        <field name="name" string="Extra Charge" force_save="1" readonly="1"/>
                                        <field name="date_total" force_save="1" readonly="1"/>
                                        <field name="ptd_total" force_save="1" readonly="1"/>
                                        <field name="ytd_total" force_save="1" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="revenue" string="Revenue">
                                <group>
                                    <group>
                                        <field name="total_date_revenue_without_tax"/>
                                        <field name="total_ptd_revenue_without_tax"/>
                                        <field name="total_ytd_revenue_without_tax"/>
                                    </group>
                                    <group>
                                        <field name="total_date_revenue_with_tax"/>
                                        <field name="total_ptd_revenue_with_tax"/>
                                        <field name="total_ytd_revenue_with_tax"/>
                                    </group>
                                </group>
                            </page>
                            <page name="payment" string="Payments">
                                <field name="payment_line_ids">
                                    <tree create="0" edit="0" delete="0" editable="bottom">
                                        <field name="journal_id" string="Payment Method" force_save="1" readonly="1"/>
                                        <field name="date_total" force_save="1" readonly="1"/>
                                        <field name="ptd_total" force_save="1" readonly="1"/>
                                        <field name="ytd_total" force_save="1" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="guest_ledger" string="Guest Ledger">
                                <group>
                                    <group>
                                        <field name="total_virtual" force_save="1" readonly="1"/>
                                        <field name="total_actual" force_save="1" readonly="1"/>
                                        <field name="total_balance" force_save="1" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="room" string="Room Summary">
                                <field name="room_line_ids">
                                    <tree create="0" edit="0" delete="0" editable="bottom">
                                        <field name="name" string="Payment Method" force_save="1" readonly="1"/>
                                        <field name="date_total" force_save="1" readonly="1"/>
                                        <field name="ptd_total" force_save="1" readonly="1"/>
                                        <field name="ytd_total" force_save="1" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="manager_report_action" model="ir.actions.act_window">
            <field name="name">Manager Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.manager.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="manager_report_menu" name="Manager Report" parent="hotel_booking.booking_reporting_menu"
                  action="manager_report_action" sequence="1" groups="hotel_booking_folio.group_manager_report"/>
    </data>
</odoo>