<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="folio_report_view_form" model="ir.ui.view">
            <field name="name">folio_report_view_form</field>
            <field name="model">folio.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="check_in_from"/>
                                <field name="check_out_from"/>
                            </group>
                            <group>
                                <field name="check_in_to"/>
                                <field name="check_out_to"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="booking_source"/>
                            </group>
                            <group>
                                <field name="company_booking_source"
                                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                       attrs="{'invisible': [('booking_source', '!=', 'company')]}"/>
                                <field name="online_travel_agent_source"
                                       attrs="{'invisible': [('booking_source', '!=', 'online_agent')]}"/>
                                <field name="state_ids" widget="many2many_tags"
                                       options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="partner_id"
                                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                <field name="booking_id"
                                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="mobile"/>
                                <field name="room_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="button_search" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids">
                            <tree create="0" edit="0" delete="0" editable="bottom">
                                <field name="folio_id" invisible="1"/>
                                <field name="booking_id" options="{'no_open': True}"/>
                                <field name="name"/>
                                <field name="room_type_id" options="{'no_open': True}"/>
                                <field name="room_id" options="{'no_open': True}"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="price_total"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="state" widget="badge"
                                       decoration-muted="state == 'draft'"
                                       decoration-success="state in ['checked_in', 'checked_out']"
                                       decoration-warning="state == 'confirmed'"
                                       decoration-danger="state == 'cancelled'"
                                />
                                <button name="button_open_lines" type="object" string="Display"/>
                                <button name="print_report" type="object" string="Print"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                        <button name="print_xlsx" type="object" string="Export" icon="fa-file-excel-o"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="folio_report_action" model="ir.actions.act_window">
            <field name="name">Folio Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">folio.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Hide folio_report_booking_menu_item menu no need for this report -->
        <!-- <menuitem id="folio_report_booking_menu" name="Folio Report" parent="hotel_booking.booking_reporting_menu"
                  action="folio_report_action" sequence="3"/> -->
        <!-- <menuitem id="folio_report_booking_menu_item" name="Folio Report" parent="hotel_booking.booking_reporting_menu_item"
                  action="folio_report_action" sequence="3"/> -->

        <!--        <menuitem id="folio_report_menu" name="Folio" parent="hotel_booking.menu_front_office"-->
        <!--                  action="folio_report_action" sequence="3"/>-->

    </data>
</odoo>