<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="daily_revenue_view_form" model="ir.ui.view">
            <field name="name">daily_revenue_view_form</field>
            <field name="model">daily.revenue</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="filter_room_charge"/>
                                <field name="filter_vat"/>
                                <!--                                <field name="company_ids" widget="many2many_tags"/>-->
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="filter_municipality"/>
                                <field name="filter_service"/>
                            </group>
                            <group>
                                <field name="display_folio_numbers"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="button_search" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids" readobly="1">
                            <tree create="0" edit="0" delete="0" editable="bottom">
                                <field name="day"/>
                                <field name="booking_ids" widget="many2many_tags"/>
                                <field name="folio_ids" widget="many2many_tags"/>
                                <field name="partner_id"/>
                                <field name="total_room_charge"/>
                                <field name="total_service"/>
                                <field name="total_vat"/>
                                <field name="total_municipality"/>
                                <field name="line_type" optional="hide"/>
                                <field name="total"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                            <button name="print_xlsx" type="object" string="Export" icon="fa-file-excel-o"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="daily_revenue_action" model="ir.actions.act_window">
            <field name="name">Daily Revenue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily.revenue</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="daily_revenue_menu" name="Daily Revenue" parent="hotel_booking.booking_reports_root_accounting"
                  action="daily_revenue_action" sequence="55" groups="hotel_booking_folio.group_daily_revenue_user"/>

        <menuitem id="daily_revenue_menu_item" name="Daily Revenue"
                  parent="hotel_booking.booking_reports_root_accounting_menu_item"
                  action="daily_revenue_action" sequence="55"/>
    </data>
</odoo>