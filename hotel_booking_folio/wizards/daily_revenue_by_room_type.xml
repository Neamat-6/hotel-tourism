<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- inherit daily_revenue_view_form -->
  <record id="daily_revenue_by_room_type_view_form" model="ir.ui.view">
    <field name="model">daily.revenue</field>
    <field name="mode">primary</field>
    <field name="priority">1000</field>
    <field name="inherit_id" ref="hotel_booking_folio.daily_revenue_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='filter_vat']" position="after">
        <field name="room_type_ids" widget="many2many_tags" />
        <field name="filter_folio_state" />
      </xpath>
    </field>
  </record>

  <record id="daily_revenue_by_room_type_action" model="ir.actions.act_window">
    <field name="name">Revenue By Room Type</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">daily.revenue</field>
    <field name="view_mode">form</field>
    <field name="view_ids"
      eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hotel_booking_folio.daily_revenue_by_room_type_view_form')}),
            ]" />
    <field name="context">{'daily_revenue_by_room_type': True}</field>
    <field name="target">new</field>
  </record>

  <menuitem id="revenue_room_type_wizard_menu" name="Revenue By Room Type"
    parent="hotel_booking.booking_reporting_menu"
    action="daily_revenue_by_room_type_action" />


</odoo>