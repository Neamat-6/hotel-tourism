<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="folio_filter_view_form" model="ir.ui.view">
            <field name="name">folio_filter_view_form</field>
            <field name="model">folio.filter</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="print_pdf" type="object" string="Print" class="oe_highlight"
                                icon="fa-file-pdf-o"/>
                        <button name="button_create_booking" type="object" string="Create Booking"
                                class="oe_highlight"/>
                        <button name="button_create_work_orders" type="object" string="Create Work Orders"
                                groups="hotel_booking.create_work_order_group"
                                class="oe_highlight"/>
                        <button name="button_out_of_order" class="oe_highlight" type="object"
                                groups="hotel_booking.create_out_of_order_group"
                                string="Create Out Of Order"/>
                    </header>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_pending_orders" type="object" class="oe_stat_button"
                                icon="fa-spinner">
                            <div class="o_stat_info">
                                <field name="pending_orders" class="o_stat_value"/>
                                <span class="o_stat_text">Pending Work Order</span>
                            </div>
                        </button>
                        <button name="action_open_complete_orders" type="object" class="oe_stat_button"
                                icon="fa-check-square">
                            <div class="o_stat_info">
                                <field name="complete_orders" class="o_stat_value"/>
                                <span class="o_stat_text">Complete Work Order</span>
                            </div>
                        </button>
                    </div>
                    <group attrs="{'invisible': [('advanced_search','!=',True)]}">
                        <group>
                            <field name="check_in_from"/>
                            <field name="check_out_from"/>
                        </group>
                        <group>
                            <field name="check_in_to"/>
                            <field name="check_out_to"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="advanced_search"/>
                            <field name="booking_source"/>
                        </group>
                        <group>
                            <field name="company_booking_source"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'invisible': [('booking_source', '!=', 'company')]}"/>
                            <field name="online_travel_agent_source"
                                   attrs="{'invisible': [('booking_source', '!=', 'online_agent')]}"/>
                            <field name="state_ids" widget="many2many_tags"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="filter_type"/>
                            <field name="related_hotel" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="partner_id"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="folio_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>
                          <group string="Yes/No">
                            <field name="include_cancelled"/>
                            <field name="day_use"/>
                            <field name="complimentary_room"/>
                            <field name="house_use"/>
                        </group>
                        <group>
                            <field name="booking_id"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="mobile"/>
                            <field name="reference_number"/>
                            <field name="room_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <div class="row">
                        <div class="col-5"/>
                        <div class="col-7">
                            <button name="button_search" type="object" string="Search" class="oe_highlight"
                                    icon="fa-search"/>
                        </div>
                    </div>
                    <field name="line_ids" widget="one2many_folio_filter">
                        <tree create="0" edit="0" delete="0" editable="bottom" limit="1000">
                            <header>
                                <button name="action_check_out" type="object" class="oe_stat_button"
                                        attrs="{'always_visible': True}"
                                        icon="fa-spinner"/>
                            </header>
                            <field name="folio_id" invisible="1"/>
                            <field name="booking_id" options="{'no_open': True}"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="company_booking_source"/>
                            <field name="customer_credit_limit"/>
                            <field name="balance"/>
                            <field name="room_type_id" options="{'no_open': True}"/>
                            <field name="room_id" options="{'no_open': True}"/>
                            <field name="ref"/>
                            <field name="related_hotel" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="price_subtotal" optional="hide"/>
                            <field name="price_total" optional="hide"/>
                            <field name="total_nights" optional="hide"/>
                            <field name="number_of_guests" optional="hide"/>
                            <field name="price_tax" optional="hide"/>
                            <field name="price_paid" optional="hide"/>
                            <field name="price_due" optional="hide"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" widget="badge"
                                   decoration-muted="state == 'draft'"
                                   decoration-success="state in ['checked_in', 'checked_out']"
                                   decoration-warning="state == 'confirmed'"
                                   decoration-danger="state == 'cancelled'"
                            />
                            <button name="button_open_lines" type="object" string="Display"/>
                            <button name="button_open_booking" type="object" string="Display Booking"/>
                            <button name="action_register_payment" type="object" string="R.Payment"/>
                            <button name="button_change_room" type="object" string="Change Room"/>
                            <button name="print_report" type="object" string="Print"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
        <record id="folio_filter_action" model="ir.actions.act_window">
            <field name="name">Front Office Operations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">folio.filter</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>
        <menuitem id="front_office_operation_menu" name="Front Office Operations"
                  parent="hotel_booking.menu_hotels_task_root"
                   sequence="5"/>
        <menuitem id="folio_filter_reservation_menu" name="Front Office Operations"
                  parent="hotel_booking_folio.front_office_operation_menu"
                  action="folio_filter_action" sequence="5"/>

        <menuitem id="folio_filter_menu" name="Front Office Operations" parent="hotel_booking.menu_front_office"
                  groups="hotel_booking.folio_filter_menu_group"
                  action="folio_filter_action" sequence="5"/>
    </data>
</odoo>