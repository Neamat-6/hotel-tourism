<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="folio_service_view_form" model="ir.ui.view">
            <field name="name">folio_service_view_form</field>
            <field name="model">folio.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="service_id" options="{'no_open': True,'no_create': True,'no_edit': True}"/>
                            <field name="price_type"/>
                            <field name="type"/>
                            <field name="notes"/>
                            <field name="price"/>
                            <!-- <field name="price_include_tax"/> -->
                            <field name="plan_tax_ids" widget="many2many_tags" invisible="1"/>
                            <!-- <field name="tax_ids" widget="many2many_tags"/> -->
                            <field name="amount_municipality"/>
                            <field name="amount_vat"/>
                            <field name="amount_tax"/>
                            <field name="amount_total"/>
                            <field name="amount_untaxed"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_add_service" type="object" string="Add" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>