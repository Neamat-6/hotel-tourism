<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="room_type_availability_report_view_form" model="ir.ui.view">
            <field name="name">room_type_availability_report_view_form</field>
            <field name="model">room.type.availability.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="button_search" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids">
                            <tree create="0" edit="0" delete="0" editable="bottom">
                                <field name="room_type_id" readonly="1" force_save="1"/>
                                <field name="date" readonly="1" force_save="1"/>
                                <field name="qty_available" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                        <button name="print_xlsx" type="object" string="Export" icon="fa-file-excel-o"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="rt_availability_report_action" model="ir.actions.act_window">
            <field name="name">Availability by Room Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.type.availability.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="rt_availability_report_menu" name="Availability by Room Type" parent="hotel_booking.booking_reporting_menu"
                  action="rt_availability_report_action" sequence="10"/>
    </data>
</odoo>