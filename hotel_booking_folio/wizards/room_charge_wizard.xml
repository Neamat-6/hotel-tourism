<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="room_charge_wizard_view_form" model="ir.ui.view">
            <field name="name">room_charge_wizard_view_form</field>
            <field name="model">room.charge.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="folio_id" readonly="1" force_save="1"/>
                            <field name="room_charge_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="price"/>
                            <field name="tax_ids" widget="many2many_tags" invisible="1"/>
                            <field name="amount_municipality"/>
                            <field name="amount_vat"/>
                            <field name="amount_tax"/>
                            <field name="amount_total"/>
                            <field name="amount_untaxed"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_add_room_charge" type="object" string="Add" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>