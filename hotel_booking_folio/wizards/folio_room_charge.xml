<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="folio_room_charge_view_form" model="ir.ui.view">
            <field name="name">folio_room_charge_view_form</field>
            <field name="model">folio.room.charge</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="folio_id" readonly="1" force_save="1"/>
                            <field name="amount"/>
                            <field name="price_include_tax"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="all_folio_line_ids" invisible="1"/>
                            <field name="folio_line_ids">
                                <tree editable="bottom" options="{'no_create_edit': True}">
                                    <field name="day" readonly="1" force_save="1"/>
                                    <field name="particulars" readonly="1" force_save="1"/>
                                    <field name="amount" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_update_charge" type="object" string="Update" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>