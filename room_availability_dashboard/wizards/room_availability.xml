<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="room_availability_view_form" model="ir.ui.view">
            <field name="name">room_availability_view_form</field>
            <field name="model">room.availability.dashboard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="hotel_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <!--                        <button name="button_print" type="object" string="Print"/>-->
                        <button special="cancel" type="object" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="room_availability_dashboard_action" model="ir.actions.act_window">
            <field name="name">room availability dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.availability.dashboard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="room_availability_dashboard_menu" name="room availability dashboard"
                  action="room_availability_dashboard_action" sequence="100"
                  groups="room_availability_dashboard.group_room_availability_dashboard"/>
    </data>
</odoo>