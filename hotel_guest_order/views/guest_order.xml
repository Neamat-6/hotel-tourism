<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="guest_order_view_tree" model="ir.ui.view">
            <field name="name">guest_order_view_tree</field>
            <field name="model">guest.order</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="categ_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="date_order"/>
                    <field name="end_date_order"/>
                    <field name="actual_start_time"/>
                    <field name="actual_end_time"/>
                    <field name="paid_status"/>
                </tree>
            </field>
        </record>

        <record id="guest_order_view_form" model="ir.ui.view">
            <field name="name">guest_order_view_form</field>
            <field name="model">guest.order</field>
            <field name="arch" type="xml">
                <form string="guest_order_form">
                    <header>
                        <button name="action_pending" type="object" states="draft" string="Pending" class="oe_highlight"/>
                        <button name="action_done" type="object" states="pending,late" string="Done" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="group_id" invisible="1"/>
                                <field name="groups_ids" invisible="1"/>
                                <field name="partner_id" options="{'no_create': True, 'no_edit':True}"/>
                                <field name="user_id" options="{'no_create': True, 'no_edit':True}"/>
                                <field name="actual_start_time"/>
                                <field name="actual_end_time"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="categ_id" options="{'no_create': True, 'no_edit':True}"/>
                                <field name="date_order"/>
                                <field name="end_date_order"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines" name="order_lines">
                                <field name="order_line" context="{'default_order_id': id}" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="name" invisible="1"/>
                                        <field name="available_product_ids" widget="many2many_tags" invisible="1"/>
                                        <field name="categ_id" options="{'no_create': True, 'no_edit': True}" force_save="1"/>
                                        <field name="product_id" options="{'no_create': True, 'no_edit': True}"
                                               force_save="1" domain="[('id', 'in', available_product_ids)]"/>
                                        <field name="product_uom_qty"/>
                                        <field name="location"/>
                                        <field name="price_unit"/>
                                        <field name="tax_id" widget="many2many_tags"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_total"/>
                                    </tree>
                                </field>
                               <group class="oe_subtotal_footer oe_right" colspan="2" name="order_total">
                                   <field name="amount_tax" force_save="1" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" force_save="1" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
<!--                                <field name="amount_paid" string="Total Paid (with rounding)" class="oe_subtotal_footer_separator" widget="monetary" attrs="{'invisible': [('amount_paid','=', 'amount_total')]}"/>-->
<!--                                <label for="margin"/>-->
<!--                                <div class="text-nowrap">-->
<!--                                    <field name="margin" class="oe_inline" attrs="{'invisible': [('is_total_cost_computed','=', False)]}"/>-->
<!--                                    <span class="oe_inline" attrs="{'invisible': [('is_total_cost_computed','=', False)]}">-->
<!--                                        (<field name="margin_percent" nolabel="1" class="oe_inline" widget="percentage"/>)-->
<!--                                    </span>-->
<!--                                    <span attrs="{'invisible': [('is_total_cost_computed','=', True)]}">TBD</span>-->
<!--                                </div>-->
<!--                                <field name="is_total_cost_computed" invisible="1"/>-->
                                <field name="currency_id" invisible="1"/>
                        </group>
                        <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="guest_order_search_view" model="ir.ui.view">
           <field name="name">guest_order_search_view</field>
           <field name="model">guest.order</field>
            <field name="arch" type="xml">
                <search>
                  <filter string="My Orders" name="my_quotation" domain="[('user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="New Orders" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Pending Orders" name="draft" domain="[('state','=','pending')]"/>
                    <filter string="Done Orders" name="sales" domain="[('state','=','done')]"/>
                    <filter string="Late Orders" name="sales" domain="[('state','=','late')]"/>
                    <separator/>
                    <filter name="filter_date_order" date="date_order"/>
                    <filter name="filter_end_date_order" date="end_date_order"/>
                    <filter name="filter_actual_start_time" date="actual_start_time"/>
                    <filter name="filter_actual_end_time" date="actual_end_time"/>
                    <field name="name" string="Order Reference"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="state" string="Status"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_user_id" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="group_by_partner_id" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <filter name="group_by_company_id" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                        <filter name="group_by_date_order" domain="[]" context="{'group_by':'date_order'}"/>
                        <filter name="group_by_end_date_order" domain="[]" context="{'group_by':'end_date_order'}"/>
                        <filter name="group_by_actual_start_time" domain="[]" context="{'group_by':'actual_start_time'}"/>
                        <filter name="group_by_actual_end_time" domain="[]" context="{'group_by':'actual_end_time'}"/>
                    </group>
            </search>
           </field>
        </record>

        <record id="guest_order_action" model="ir.actions.act_window">
            <field name="name">Guest Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">guest.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="guest_order_menu_root" name="Guest Orders"
                  groups="hotel_guest_order.group_guest_order_user"
                  sequence="10"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="guest_order_menu" name="Orders" parent="guest_order_menu_root"
                  action="guest_order_action" sequence="1"/>

        <menuitem id="guest_order_products" name="Products" parent="guest_order_menu_root" sequence="2"/>
        
        <record id="guest_product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_filter_to_sell":1}</field>
        </record>
        
        <menuitem id="guest_order_products_templ" name="Products" parent="guest_order_products" 
                  action="guest_product_action" sequence="1"/>
        <menuitem id="guest_order_product_variant" name="Product Variants" parent="guest_order_products"
                  action="product.product_normal_action_sell" sequence="2"/>

    </data>
</odoo>