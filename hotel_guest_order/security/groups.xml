<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_hotel_guest_order">
            <field name="name">Guest Order</field>
            <field name="sequence">0</field>
        </record>
        <record id="group_guest_order_user" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="hotel_guest_order.module_category_hotel_guest_order"/>
        </record>

        <record id="group_guest_order_admin" model="res.groups">
            <field name="name">SuperVisor</field>
            <field name="category_id" ref="hotel_guest_order.module_category_hotel_guest_order"/>
            <field name="implied_ids" eval="[(4, ref('group_guest_order_user'))]"/>
        </record>

        <record id="group_guest_order_superadmin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="hotel_guest_order.module_category_hotel_guest_order"/>
            <field name="implied_ids" eval="[(4, ref('group_guest_order_admin'))]"/>
        </record>

        <record model="ir.rule" id="guest_order_comp_rule">
            <field name="name">Guest Order multi-company</field>
            <field name="model_id" ref="hotel_guest_order.model_guest_order"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="guest_order_line_comp_rule">
            <field name="name">Guest Order Line multi-company</field>
            <field name="model_id" ref="hotel_guest_order.model_guest_order_line"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="employee_guest_order_rule">
            <field name="name">Employee Guest Order Rule</field>
            <field name="model_id" ref="hotel_guest_order.model_guest_order"/>
            <field name="groups" eval="[(4, ref('hotel_guest_order.group_guest_order_user'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>

        <record model="ir.rule" id="supervisor_guest_order_rule">
            <field name="name">Supervisor Guest Order Rule</field>
            <field name="model_id" ref="hotel_guest_order.model_guest_order"/>
            <field name="groups" eval="[(4, ref('hotel_guest_order.group_guest_order_admin'))]"/>
            <field name="domain_force">['|',('categ_id', 'in', user.categ_ids.ids), ('categ_id', '=', False)]</field>
        </record>

        <record model="ir.rule" id="administrator_guest_order_rule">
            <field name="name">Administrator Guest Order Rule</field>
            <field name="model_id" ref="hotel_guest_order.model_guest_order"/>
            <field name="groups" eval="[(4, ref('hotel_guest_order.group_guest_order_superadmin'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>