<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="warning_wizard_view_form" model="ir.ui.view">
        <field name="name">warning.wizard.view.form</field>
        <field name="model">warning.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h4>
                            <field name="message" readonly="1"/>
                        </h4>
                    </group>
                </sheet>
                <footer>
                    <button name='action_confirm' type='object' string="OK" class="oe_highlight"/>
                    <button name='action_cancel' type='object' string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>