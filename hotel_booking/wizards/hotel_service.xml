<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hotel_service_view_form" model="ir.ui.view">
            <field name="name">hotel_service_view_form</field>
            <field name="model">hotel.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="room_id"/>
                                <field name="hotel_services_id" widget="selection"/>
                            </group>
                            <group>
                                <field name="no_lines"/>
                                <field name="total"/>
                                <field name="company_ids" widget="many2many_tags"/>
                                <field name="hotel_ids" widget="many2many_tags"/>
                                <field name="print_amount"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="get_booking_folios" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="day"/>
                                <field name="particular"/>
                                <field name="booking_id"/>
                                <field name="room_id"/>
                                <field name="description"/>
                                <field name="created_by"/>
                                <field name="amount" sum="Balance"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="print_pdf" type="object" string="Print PDF" icon="fa-file-pdf-o"/>
                            <button name="print_xlsx" type="object" string="Print Excel" icon="fa-file-pdf-o"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hotel_service_action" model="ir.actions.act_window">
            <field name="name">Hotel Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.service</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="hotel_service_menu" name="Hotel Services Report"
                  parent="hotel_booking.booking_reports_root_accounting"
                  action="hotel_service_action" sequence="22"/>

        <menuitem id="hotel_service_menu_item" name="Hotel Services Report"
                  parent="hotel_booking.booking_reports_root_accounting_menu_item"
                  action="hotel_service_action" sequence="22"/>
    </data>
</odoo>