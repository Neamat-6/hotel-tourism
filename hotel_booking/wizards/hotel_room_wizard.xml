<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hotel_room_wizard_view" model="ir.ui.view">
        <field name="name">Hotel Room</field>
        <field name="model">hotel.room.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="user_id" widget="res_partner_many2one"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" class="oe_highlight" type="object" string="Print PDF"/>
                    <button string="Cancel" class="btn btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hotel_room_wizard" model="ir.actions.act_window">
        <field name="name">Hotel Room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.room.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_hotel_room_wizard" name="Actual Checked In Report" parent="hotel_booking.booking_reports_root_accounting"
              action="action_account_payments" sequence="5"/>

    <menuitem id="menu_hotel_room_wizard_item" name="Actual Checked In Report" parent="hotel_booking.booking_reports_root_accounting_menu_item"
              action="action_account_payments" sequence="5"/>


</odoo>

