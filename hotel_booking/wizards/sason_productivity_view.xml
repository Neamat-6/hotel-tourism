<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="season_productivity_view_form" model="ir.ui.view">
            <field name="name">season_productivity_view_form</field>
            <field name="model">season.productivity</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="booking_source"/>
                                <field name="online_travel_agent_source"
                                       attrs="{'invisible': [('booking_source', '!=', 'online_agent')]}"/>
                                <field name="hotel_ids" widget="many2many_tags" force_save="1" required="1"/>
                            </group>
                            <group>
                                <field name="company_booking_source"
                                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                       attrs="{'invisible': [('booking_source', '!=', 'company')]}"/>
                                <field name="season_ids" widget="many2many_tags" required="1"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="get_booking_source_folios" type="object" string="Search"
                                        class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="season_id"/>
                                <field name="total_amount"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                            <button name="print_xlsx" type="object" string="Print Excel" icon="fa-file-excel-o"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="season_productivity_action_view" model="ir.actions.act_window">
            <field name="name">Season Productivity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">season.productivity</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="company_booking_source_menu" name="Season Productivity"
                  parent="hotel_booking.booking_reporting_menu"
                  action="season_productivity_action_view" sequence="57"/>

        #duplicated menu
        <menuitem id="company_booking_source_menu_item" name="Season Productivity"
                  parent="hotel_booking.booking_reporting_menu_item"
                  action="season_productivity_action_view" sequence="57"/>
    </data>
</odoo>