<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_booking_payment_register_form" model="ir.ui.view">
            <field name="name">booking.payment.register.form</field>
            <field name="model">booking.payment.register</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                    <!-- Invisible fields -->
                    <field name="payment_type" invisible="1" force_save="1"/>
                    <field name="partner_type" invisible="1" force_save="1"/>
                    <field name="company_id" invisible="1" force_save="1"/>
                    <field name="partner_id" invisible="1" force_save="1"/>
                    <field name="hide_payment_method_line" invisible="1"/>
                    <field name="available_payment_method_line_ids" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <group>
                        <group name="group1">
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                            <field name="journal_partner_id" options="{'no_open': True, 'no_create': True}" required="0"
                                   attrs="{'invisible': [('is_city_ledger', '=', False)], 'required': [('is_city_ledger', '=', True)]}"/>
                            <field name="payment_method_line_id"
                                   required="1" options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('hide_payment_method_line', '=', True)]}"/>
                            <field name="partner_bank_id" invisible="1"/>
                            <field name="is_city_ledger" invisible="1"/>
                            <field name="notes"/>
                            <field name="payment_note"/>
                            <field name="is_cancellation_fee"/>
<!--                            <field name="pay_type" attrs="{'invisible': [('type', '!=', 'city_ledger')],'required':[('type','=','city_ledger')]}"/>-->
<!--                            <field name="account_journal_id"-->
<!--                                   attrs="{'invisible': [('pay_type', '!=', 'yes')],'required':[('pay_type','=','yes')]}"-->
<!--                                   options="{'no_open': True, 'no_create': True}"/>-->
<!--                            <field name="advanced_payment" attrs="{'invisible': [('pay_type', '!=', 'yes')]}"/>-->
                        </group>
                        <group name="group2">
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="pay_minimum" invisible="1"/>
                                <field name="amount" attrs="{'readonly': [('pay_minimum', '!=', True)]}"/>
                                <field name="currency_id"
                                       required="1"
                                       options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"/>
                            </div>
                            <field name="payment_date"/>
                            <field name="communication"/>
                            <field name="max_credit" attrs="{'invisible': [('type', '!=', 'city_ledger')]}" groups="hotel_booking.group_pay_max_credit"/>
                            <field name="audit_date" readonly="1"/>
                            <field name="booking_payment_type" invisible="1"/>
                            <field name="company_booking_source_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Create Payment" name="action_create_payments" type="object" class="oe_highlight"
                                data-hotkey="q"/>
                        <button string="Print Payment" name="action_payment_report" type="object" class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
