<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="work_order_view_form" model="ir.ui.view">
            <field name="name">work_order_view_form</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="order_type"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                                <field name="date_deadline"/>
                                <field name="room_id"/>
                            </group>
                            <group>
                                <field name="employee_id" domain="[('id','in', employee_ids)]"/>
                                <field name="employee_ids" invisible="1"/>
                                <field name="type"/>
                                <field name="priority"/>
                                <field name="state"/>
                                <field name="department_id"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="get_work_order" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="order_type"/>
                                <field name="date_stop"/>
                                <field name="date_deadline"/>
                                <field name="room_id" optional="hide"/>
                                <field name="employee_id" optional="hide"/>
                                <field name="type"/>
                                <field name="priority"/>
                                <field name="state"/>
                                <field name="department_id"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="work_order_action" model="ir.actions.act_window">
            <field name="name">Work Order Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="work_order_menu" name="Work Order Report" parent="hotel_booking.booking_reports_root_housekeeping"
                  action="work_order_action" sequence="23"/>

        <menuitem id="work_order_menu_item" name="Work Order Report" parent="hotel_booking.booking_reports_root_housekeeping_menu_item"
                  action="work_order_action" sequence="23"/>
    </data>
</odoo>