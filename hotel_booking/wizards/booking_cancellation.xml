<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="booking_cancellation_view_form" model="ir.ui.view">
            <field name="name">booking_cancellation_view_form</field>
            <field name="model">booking.cancellation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="room_type_id" widget="selection"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="booking_source"/>
                                <field name="include_notes" string="Include Notes"/>
                                <field name="online_travel_agent_source"
                                       attrs="{'invisible': [('booking_source', '!=', 'online_agent')]}"/>
                                <field name="company_booking_source"
                                       attrs="{'invisible': [('booking_source', '!=', 'company')]}"/>
                            </group>
                            <group>
                                <field name="print_subtotal"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="get_booking_folios" type="object" string="Search" class="oe_highlight"
                                        icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="ref"/>
                                <field name="partner_id"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="cancelled_at"/>
                                <field name="cancelled_by"/>
                                <field name="no_guests" optional="hide"/>
                                <field name="room_type_id" optional="hide"/>
                                <field name="booking_source" optional="hide"/>
                                <field name="online_travel_agent_source" optional="hide"/>
                                <field name="company_booking_source" optional="hide"/>
                                <field name="total_nights" optional="hide"/>
                                <field name="rate_type" optional="hide"/>
                                <field name="subtotal" optional="hide"/>
                                <field name="total_paid" optional="hide"/>
                                <field name="note" optional="hide"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="booking_cancellation_action" model="ir.actions.act_window">
            <field name="name">Booking Cancellation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">booking.cancellation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="booking_cancellation_menu" name="Cancellation Report" parent="hotel_booking.booking_reports_root_front_office"
                  action="booking_cancellation_action" sequence="25"/>

        <menuitem id="booking_cancellation_menu_item" name="Cancellation Report" parent="hotel_booking.booking_reports_root_front_office_menu_item"
                  action="booking_cancellation_action" sequence="25"/>
    </data>
</odoo>
