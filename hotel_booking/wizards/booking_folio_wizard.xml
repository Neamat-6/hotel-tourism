<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="booking_folio_wizard" model="ir.ui.view">
        <field name="name">Booking Folios</field>
        <field name="model">booking.folio.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="day"/>
                            <field name="room_id"/>
                        </group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" class="oe_highlight" type="object" string="Print PDF"/>
                    <button string="Cancel" class="btn btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_booking_folio_wizard" model="ir.actions.act_window">
        <field name="name">Booking Folios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.folio.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_booking_folio_wizard" name="Booking Folios Report" parent="hotel_booking.booking_reports_root_accounting"
              action="action_booking_folio_wizard" sequence="5"/>

    <menuitem id="menu_booking_folio_wizard_item" name="Booking Folios Report" parent="hotel_booking.booking_reports_root_accounting_menu_item"
              action="action_booking_folio_wizard" sequence="5"/>


</odoo>

