<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="format_partner_ledger_report" model="report.paperformat">
            <field name="name">Partner Ledger Report Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="action_partner_ledger_report">
            <field name="name">Partner Ledger Report</field>
            <field name="model">partner.ledger.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.partner_ledger_report</field>
            <field name="report_file">hotel_booking.partner_ledger_report</field>
            <field name="binding_model_id" ref="model_city_ledger_report"/>
            <field name="print_report_name">'Partner Ledger - %s' % (object.partner_id.name).replace('/', '')</field>
            <field name="paperformat_id" ref="hotel_booking.format_hotel_booking_source_report"/>
            <field name="binding_type">report</field>
            <field name="binding_view_types">list</field>
        </record>

        <template id="partner_ledger_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: Arial, Helvetica, sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <div class="text-center">
                            <h2>Partner Ledger Report</h2>
                        </div>
                        <div class="footer">
                            <p class="text-center">Generated by Hotel Task</p>
                        </div>
                        <div class="content">
                            <t t-foreach="docs" t-as="doc">
                                <p>
                                    <strong>From:</strong>
                                    <t dir="rtl" t-esc="doc.date_from"/>
                                    <strong>To:</strong>
                                    <t dir="rtl" t-esc="doc.date_to"/>
                                </p>
                                <p>
                                    <strong>Customer:</strong>
                                    <t t-esc="doc.partner_id.name"/>
                                </p>
                                <table class="GeneratedTable">
                                    <colgroup>
                                        <col width="15%"/>
                                        <col width="15%"/>
                                        <col width="25%"/>
                                        <col width="15%"/>
                                        <col width="10%"/>
                                        <col width="10%"/>
                                        <col width="10%"/>
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Journal</th>
                                            <th>Description</th>
                                            <th>Booking</th>
                                            <th>Folio</th>
                                            <th>Debit</th>
                                            <th>Credit</th>
                                            <th>Balance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.transaction_lines" t-as="line">
                                            <tr>
                                                <td dir="rtl">
                                                    <t t-esc="line.date"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.journal_id"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.description"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.booking_id"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.folio_id"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.debit"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.credit"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.balance"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
