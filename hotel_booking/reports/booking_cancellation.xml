<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="format_booking_cancellation_report" model="report.paperformat">
            <field name="name">Booking Cancellation Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="action_booking_cancellation_report">
            <field name="name">Booking Cancellation</field>
            <field name="model">booking.cancellation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.booking_cancellation_report</field>
            <field name="report_file">hotel_booking.booking_cancellation_report</field>
            <field name="binding_model_id" ref="model_booking_cancellation"/>
            <field name="paperformat_id" ref="hotel_booking.format_booking_cancellation_report"/>
        </record>

        <template id="booking_cancellation_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
    table.GeneratedTable {
        width: 100%;
        border-collapse: collapse;
        border-width: 1px;
        border-color: #000000;
        border-style: solid;
        font-size: 14px;
        color: #000000;
    }

    table.GeneratedTable th, table.GeneratedTable td {
        border: 1px solid #000000;
        padding: 0; /* Remove extra padding */
        text-align: center; /* Center-align text */
    }

    table.GeneratedTable th {
        background-color: #f5f5f5; /* Optional: Add a light background to headers */
        font-weight: bold;
    }

    table.GeneratedTable td {
        font-size: 12px; /* Adjust font size for compactness */
        word-wrap: break-word; /* Break long words */
        white-space: normal; /* Allow wrapping to new lines */
    }

    .m-0 {
        margin: 0 !important; /* Remove margins for Bootstrap classes */
    }

    .p-0 {
        padding: 0 !important; /* Remove padding for Bootstrap classes */
    }
</style>

                        <t t-foreach="docs" t-as="doc">
                            <b>
                                <h4 class="text-center">Booking Cancellation Report <span>
                                    ( From:
                                    <t t-esc="doc.date_from"/>
                                    To:
                                    <t t-esc="doc.date_to"/> )
                                </span></h4>
                            </b>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Booking No</th>
                                        <th class="text-center">Guest Name</th>
                                        <th class="text-center">Check In</th>
                                        <th class="text-center">Check Out</th>
                                        <th class="text-center">Cancelled at</th>
                                        <th class="text-center">Cancelled by</th>
                                        <th class="text-center">NO. Guests</th>
                                        <th class="text-center">Room Type</th>
                                        <th class="text-center">Booking Source</th>
                                        <th class="text-center" t-if="doc.booking_source == 'online_agent'">Online Booking
                                            Source
                                        </th>
                                        <th class="text-center" t-if="doc.booking_source == 'company'">Company Booking
                                            Source
                                        </th>
                                        <th class="text-center">Total Nights</th>
                                        <th class="text-center" t-if="doc.print_subtotal">Subtotal</th>
                                        <th class="text-center" t-if="doc.include_notes">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-field="line.ref"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_in"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_out"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.cancelled_at"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.cancelled_by.name"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.no_guests"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.room_type_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.booking_source"/>
                                            </td>
                                            <td class="text-center" t-if="doc.booking_source == 'online_agent'">
                                                <span t-field="line.online_travel_agent_source"/>
                                            </td>
                                            <td class="text-center" t-if="doc.booking_source == 'company'">
                                                <span t-field="line.company_booking_source"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.total_nights"/>
                                            </td>
                                            <td class="text-center" t-if="doc.print_subtotal">
                                                <span t-field="line.subtotal"/>
                                            </td>
                                            <td class="text-center" t-if="doc.include_notes">
                                                <span t-field="line.note"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
