<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="format_complimentary_reservation_report" model="report.paperformat">
            <field name="name">Complimentary Reservation Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="complimentary_reservation_wizard_action_report">
            <field name="name">Complimentary Reservation</field>
            <field name="model">complimentary.reservation.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.template_complimentary_reservation_wizard_report</field>
            <field name="report_file">hotel_booking.template_complimentary_reservation_wizard_report</field>
            <field name="binding_model_id" ref="model_complimentary_reservation_wizard"/>
            <field name="paperformat_id" ref="hotel_booking.format_complimentary_reservation_report"/>
        </record>

        <template id="template_complimentary_reservation_wizard_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: Arial, Helvetica, sans-serif !important;" dir="rtl" lang="ar">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-foreach="docs" t-as="doc">
                            <b>
                                <span dir="ltr">
                                    <t t-if="doc.hotel_ids">
                                        &#160;&#160;&#160;&#160; Hotels:
                                        <t t-esc="doc.hotel_ids.mapped('name')"/>
                                    </t>
                                    <t t-if="doc.partner_ids">
                                        &#160;&#160;&#160;&#160; Customers:
                                        <t t-esc="doc.partner_ids.mapped('name')"/>
                                    </t>
                                </span>
                            </b>
                            <b>
                                <h4 class="text-center">Complimentary Reservation</h4>
                            </b>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Room Type</th>
                                        <th class="text-center">Check In</th>
                                        <th class="text-center">Check Out</th>
                                        <th class="text-center">Related Hotel</th>
                                        <th class="text-center">Customer</th>
                                        <th class="text-center">State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-field="line.room_type_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_in"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_out"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.hotel_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.state"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
