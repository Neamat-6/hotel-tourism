<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="format_housekeeping_tree_report" model="report.paperformat">
            <field name="name">Housekeeping Report Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <record model="ir.actions.report" id="action_housekeeping_tree_report">
            <field name="name">Housekeeping Report</field>
            <field name="model">hotel.room</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.housekeeping_tree_report</field>
            <field name="report_file">hotel_booking.housekeeping_tree_report</field>
            <field name="binding_model_id" ref="model_hotel_room"/>
            <field name="binding_type">report</field>
            <field name="binding_view_types">list</field>
        </record>
        <template id="housekeeping_tree_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <table class="GeneratedTable">
                            <colgroup>
                                <col width='15%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='20%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Housekeeper</th>
                                    <th class="text-center">Out Of Order From</th>
                                    <th class="text-center">Out Of Order To</th>
                                    <th class="text-center">Out Of Order Reason</th>
                                    <th class="text-center">Booking#</th>
                                    <th class="text-center">Customer</th>
                                    <th class="text-center">Business Source</th>
                                    <th class="text-center">Stayover Status</th>
                                    <th class="text-center">Housekeeping Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="with-border">
                                            <span t-field="doc.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.housekeeper.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.out_of_order_from"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.out_of_order_to"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.out_of_order_reason"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.booking_id.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.booking_partner_id"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.business_source_id"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.stay_state"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
