<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="format_dynamic_booking_source_report" model="report.paperformat">
            <field name="name">Dynamic Booking Source</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <record model="ir.actions.report" id="action_dynamic_booking_source_report">
            <field name="name">Dynamic Booking Source</field>
            <field name="model">booking.filter</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.dynamic_booking_source_report</field>
            <field name="report_file">hotel_booking.dynamic_booking_source_report</field>
            <field name="binding_model_id" ref="model_booking_filter"/>
            <field name="paperformat_id" ref="hotel_booking.format_hotel_booking_source_report"/>
        </record>

        <template id="dynamic_booking_source_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-foreach="docs" t-as="doc">
                            <b>
                                <span>
                                    <t t-if="doc.arrival_from">
                                        &#160;&#160;&#160;&#160; Check In From :
                                        <t t-esc="doc.arrival_from"/>
                                    </t>
                                    <t t-if="doc.arrival_to">
                                        &#160;&#160;&#160;&#160; Check In To :
                                        <t t-esc="doc.arrival_to"/>
                                    </t>
                                    <br/>
                                    <t t-if="doc.departure_from">
                                        &#160;&#160;&#160;&#160; Check Out From:
                                        <t t-esc="doc.departure_from"/>
                                    </t>

                                    <t t-if="doc.departure_to">
                                        &#160;&#160;&#160;&#160; Check Out To:
                                        <t t-esc="doc.departure_to"/>
                                    </t>
                                    <br/>
                                    <t t-if="doc.hotel_ids">
                                        &#160;&#160;&#160;&#160; Hotels:
                                        <t t-esc="', '.join([ hotel.name for hotel in doc.hotel_ids])"/>
                                    </t>
                                </span>
                                <br/>
                            </b>
                            <br/>
                            <strong>
                                <h3 class="text-center" style="color:#001f5c;">
                                    Booking Source Report (Summary)
                                </h3>
                            </strong>
                            <br/>
                            <br/>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Booking Source Company</th>
                                        <th class="text-center">Booking Source Direct</th>
                                        <th class="text-center">Booking Source Online Travel Agent</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">
                                            <span t-field="doc.total_amount"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.total_amount_direct"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.total_amount_online"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <div>
                                <b>
                                    <span>
                                        Total Sources:
                                        <t t-esc="doc.total_amount + doc.total_amount_direct + doc.total_amount_online"/>
                                    </span>
                                </b>
                                <br/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
