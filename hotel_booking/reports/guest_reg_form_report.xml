                            </div>
                            <br/>
                            <!--payments-->
                            <div style="border:1px solid black;padding-left:10px;padding-right:10px;">
                                <!--1-->
                                <div class="row">
                                    <div class="col-3">
                                        <strong>Untaxed Amount</strong>
                                    </div>
                                    <div class="col-3">
                                        <span t-field="doc.amount_untaxed"/>
