                                        <t t-set="minutes_out" t-value="int(round((time_float_out - hours_out) * 60))"/>
                                        <t t-set="time_str_out" t-value="('%02d:%02d' % (hours_out, minutes_out))"/>
                                        <td style="border-color:#a6afb8;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;overflow:hidden;padding:0px 20px;text-align:center;vertical-align:top;word-break:normal">
                                            Check In
