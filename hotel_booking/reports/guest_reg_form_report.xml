<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.report" id="customer_hotel_booking_report">
            <field name="name">Confirmation Booking (Without Prices)</field>
            <field name="model">hotel.booking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.customer_confirmation_booking_template</field>
            <field name="report_file">hotel_booking.customer_confirmation_booking_template</field>
            <field name="print_report_name">(object._get_confirm_report_base_filename())</field>
            <field name="binding_model_id" ref="model_hotel_booking"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="hotel_booking.paperformat_action_report_confirmation"/>
            <field name="binding_view_types">form</field>
        </record>

        <record model="ir.actions.report" id="action_guest_reg_form_report">
            <field name="name">Guest Registration Form (Without Prices)</field>
            <field name="model">hotel.booking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.guest_reg_form_report</field>
            <field name="report_file">hotel_booking.guest_reg_form_report</field>
            <field name="binding_model_id" ref="model_hotel_booking"/>
            <field name="binding_type">report</field>
            <field name="binding_view_types">form</field>
        </record>

        <template id="guest_reg_form_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <br/>
                    <br/>
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;font-size:13px;">
                        <t t-foreach="docs" t-as="doc">
                            <br/>
                            <br/>
                            <h5 class="text-center">Guest Registration Form</h5>
                            <div style="border:1px solid black;padding-left:10px;padding-right:10px;">
                                <!--1-->
                                       <t t-set="checkin_date" t-value="doc.check_in.date()"/>
                                        <t t-set="time_float" t-value="doc.company_id.hotel_check_in_point"/>
                                        <t t-set="meridian" t-value="doc.company_id.hotel_check_in_am_pm"/>

                                        <t t-set="checkout_date" t-value="doc.check_out.date()"/>
                                        <t t-set="time_float_out" t-value="doc.company_id.hotel_check_out_point"/>
                                        <t t-set="meridian_out" t-value="doc.company_id.hotel_check_out_am_pm"/>

                                        <t t-set="hours" t-value="int(time_float)"/>
                                        <t t-set="minutes" t-value="int(round((time_float - hours) * 60))"/>
                                        <t t-set="time_str_in" t-value="('%02d:%02d' % (hours, minutes))"/>

                                         <t t-set="hours_out" t-value="int(time_float_out)"/>
                                        <t t-set="minutes_out" t-value="int(round((time_float_out - hours_out) * 60))"/>
                                        <t t-set="time_str_out" t-value="('%02d:%02d' % (hours_out, minutes_out))"/>

                                <div class="row">
                                    <div class="col-3">
                                        <strong>Registration No.</strong>
                                    </div>
                                    <div class="col-3">
                                        <span t-field="doc.name"/>
                                    </div>
                                    <div class="col-3">
                                        <strong>Check In Date</strong>
                                    </div>
                                    <div class="col-3">
