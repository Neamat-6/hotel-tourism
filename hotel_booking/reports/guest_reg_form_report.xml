                                <thead>
                                    <tr>
                                        <th style="border-color:#a6afb8;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;font-weight:normal;overflow:hidden;padding:0px 20px;text-align:center;vertical-align:top;word-break:normal">
                                            Hotel:
                                        </th>
                                        <th style="border-color:#a6afb8;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;font-weight:normal;overflow:hidden;padding:0px 20px;text-align:center;vertical-align:top;word-break:normal">
                                            <span t-field="doc.hotel_id"/>
                                        </th>
                                        <th style="border-color:#a6afb8;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;font-weight:normal;overflow:hidden;padding:0px 20px;text-align:center;vertical-align:top;word-break:normal">
                                            Booking Source
                                        </th>
                                        <th style="border-color:#a6afb8;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;font-weight:normal;overflow:hidden;padding:0px 20px;text-align:center;vertical-align:top;word-break:normal">
