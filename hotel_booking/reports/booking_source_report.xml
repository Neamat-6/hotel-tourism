<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="format_hotel_booking_source_report" model="report.paperformat">
            <field name="name">Booking Source Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="action_booking_source_report">
            <field name="name">Booking Source</field>
            <field name="model">hotel.booking.source</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.booking_source_report</field>
            <field name="report_file">hotel_booking.booking_source_report</field>
            <field name="binding_model_id" ref="model_hotel_booking_source"/>
            <field name="paperformat_id" ref="hotel_booking.format_hotel_booking_source_report"/>
        </record>

        <template id="booking_source_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-foreach="docs" t-as="doc">
                            <b>
                                <span>
                                    <t t-if="doc.booking_source">
                                        &#160;&#160;&#160;&#160; Booking Source :
                                        <t t-if="doc.booking_source == 'online_agent'">
                                            Online Agent
                                        </t>
                                        <t t-if="doc.booking_source == 'company'">
                                            Company
                                        </t>
                                        <t t-if="doc.booking_source == 'direct'">
                                            Direct
                                        </t>
                                    </t>
                                    <t t-if="not doc.booking_source">
                                        &#160;&#160;&#160;&#160; Booking Source :
                                        ALL Sources
                                    </t>
                                    <br/>
                                    <t t-if="doc.check_in_from">
                                        &#160;&#160;&#160;&#160; Check In From :
                                        <t t-esc="doc.check_in_from"/>
                                    </t>
                                    <t t-if="doc.check_in_to">
                                        &#160;&#160;&#160;&#160; Check In To :
                                        <t t-esc="doc.check_in_to"/>
                                    </t>
                                    <br/>
                                    <t t-if="doc.check_out_to">
                                        &#160;&#160;&#160;&#160; Check Out From:
                                        <t t-esc="doc.check_out_from"/>
                                    </t>

                                    <t t-if="doc.check_out_to">
                                        &#160;&#160;&#160;&#160; Check Out To:
                                        <t t-esc="doc.check_out_to"/>
                                    </t>
                                    <br/>
                                    <t t-if="doc.related_hotel">
                                        &#160;&#160;&#160;&#160; Hotels:
                                        <t t-esc="doc.related_hotel.mapped('name')"/>
                                    </t>
                                </span>
                                <br/>
                            </b>
                            <b>
                                <h4 class="text-center">Booking Source Report</h4>
                            </b>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Booking No</th>
                                        <th class="text-center">Guest Name</th>
                                        <th class="text-center">Check In</th>
                                        <th class="text-center">Check Out</th>
                                        <th class="text-center">NO. Guests</th>
                                        <th class="text-center">Room Type</th>
                                        <th class="text-center">Hotel</th>
                                        <th class="text-center">Booking Source</th>
                                        <th class="text-center" t-if="doc.booking_source == 'online_agent'">Online
                                            Booking
                                            Source
                                        </th>
                                        <th class="text-center" t-if="doc.booking_source == 'company'">Company Booking
                                            Source
                                        </th>
                                        <th class="text-center">Total Nights</th>
                                        <th class="text-center">Subtotal</th>
                                        <th class="text-center">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-field="line.ref"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_in"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.check_out"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.no_guests"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.room_type_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.related_hotel.name"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.booking_source"/>
                                            </td>
                                            <td class="text-center" t-if="doc.booking_source == 'online_agent'">
                                                <span t-field="line.online_travel_agent_source"/>
                                            </td>
                                            <td class="text-center" t-if="doc.booking_source == 'company'">
                                                <span t-field="line.company_booking_source"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.total_nights"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.subtotal"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.note"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <br/>
                        <div>
                            <b>
                                <span>
                                    Total:
                                    <t t-esc="doc.total_amount"/>
                                </span>
                            </b>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
