<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="paperformat_action_report_confirmation" model="report.paperformat">
            <field name="name">ID CARD</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <record model="ir.actions.report" id="customer_hotel_booking">
            <field name="name">Confirmation Booking</field>
            <field name="model">hotel.booking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.customer_hotel_booking_template</field>
            <field name="report_file">hotel_booking.customer_hotel_booking_template</field>
            <field name="print_report_name">(object._get_confirm_report_base_filename())</field>
            <field name="binding_model_id" ref="model_hotel_booking"/>
			<field name="binding_type">report</field>
            <field name="paperformat_id" ref="hotel_booking.paperformat_action_report_confirmation"/>
			<field name="binding_view_types">form</field>
        </record>
    </data>
</odoo>

