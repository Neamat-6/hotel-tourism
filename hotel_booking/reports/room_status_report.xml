<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="format_room_status_report" model="report.paperformat">
            <field name="name">Room Status Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record model="ir.actions.report" id="action_room_status_report">
            <field name="name">Room Status</field>
            <field name="model">room.status</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.room_status_report</field>
            <field name="report_file">hotel_booking.room_status_report</field>
            <field name="binding_model_id" ref="model_room_status"/>
            <field name="paperformat_id" ref="hotel_booking.format_room_status_report"/>
        </record>

        <template id="room_status_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-set="current_date" t-value="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                        <t t-set="current_time" t-value="datetime.datetime.now().strftime('%H:%M:%S')"/>
                        <t t-foreach="docs" t-as="doc">
                            <div class="text-right" style="margin-right:30px">
                                <b>
                                    <span class="text-right" style="margin-right:50px">Date:
                                        <span t-esc="current_date"/>
                                    </span>
                                </b>
                                <br/>
                                <b>
                                    <span class="text-right" style="margin-right:71px">Time:
                                        <span t-esc="current_time"/>
                                    </span>
                                </b>
                                <br/>
                                <b>
                                    <span class="text-right">Stay State:
                                        <span t-field="doc.stay_state"/>
                                        &#160;&#160;&#160;&#160; State:
                                        <span t-field="doc.state"/>
                                    </span>
                                </b>
                            </div>
                            <br/>
                            <b>
                                <h4 class="text-center">Room Status Report</h4>
                            </b>
                            <br/>
                            <table class="GeneratedTable m-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Room</th>
                                        <!--                                        <th class="text-center">Our Of Order From</th>-->
                                        <!--                                        <th class="text-center">Our Of Order To</th>-->
                                        <!--                                        <th class="text-center">Our Of Order Reason</th>-->
                                        <th class="text-center">Room Type</th>
                                        <!--                                        <th class="text-center">Booking</th>-->
                                        <th class="text-center">Stay State</th>
                                        <th class="text-center">State</th>
                                        <th class="text-center">Housekeeper</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-field="line.name"/>
                                            </td>
                                            <!--                                            <td class="text-center">-->
                                            <!--                                                <span t-field="line.out_of_order_from"/>-->
                                            <!--                                            </td>-->
                                            <!--                                            <td class="text-center">-->
                                            <!--                                                <span t-field="line.out_of_order_to"/>-->
                                            <!--                                            </td>-->
                                            <!--                                            <td class="text-center">-->
                                            <!--                                                <span t-field="line.out_of_order_reason"/>-->
                                            <!--                                            </td>-->
                                            <td class="text-center">
                                                <span t-field="line.room_type"/>
                                            </td>
                                            <!--                                            <td class="text-center" >-->
                                            <!--                                                <span t-field="line.booking_id"/>-->
                                            <!--                                            </td>-->
                                            <td class="text-center">
                                                <span t-field="line.stay_state"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.state"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.housekeeper"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
