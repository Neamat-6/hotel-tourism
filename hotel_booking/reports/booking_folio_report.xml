<odoo>
    <data>

        <record id="paperformat_booking_folio" model="report.paperformat">
            <field name="name">Booking Folio Format</field>
            <field name="default" eval="True"/>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">100</field>
        </record>

        <record id="booking_folio_report" model="ir.actions.report">
            <field name="name">Booking Folio Report</field>
            <field name="model">account.payment.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.booking_folio_report_template</field>
            <field name="print_report_name">'Booking Folios Report-%s' % (object.name).replace('/', '')</field>
            <field name="report_file">hotel_booking.booking_folio_report_template</field>
            <field name="paperformat_id" ref="paperformat_booking_folio"/>
            <field name="binding_model_id" ref="hotel_booking.model_booking_folio_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <template id="booking_folio_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                            width: 100%;
                            background-color: #ffffff;
                            border-collapse: collapse;
                            border-width: 2px;
                            border-color: #121212;
                            border-style: solid;
                            color: black;
                            }

                            table.GeneratedTable td, table.GeneratedTable th {
                            padding: 3px;
                            color: black;
                            }
                            table.GeneratedTable td.with-border, table.GeneratedTable th {
                            border-width: 2px;
                            border-color: #121212;
                            border-style: solid;
                            padding: 3px;
                            color: black;
                            text-align: center;
                            }

                            table.GeneratedTable thead {
                            background-color: #ffffff;
                            color: black;
                            }
                            .bold-text{font-weight: bold}
                        </style>
                        <br/>
                        <div class="text-left" style="font-weight:bold;" dir="rtl">
                            <span>Date :
                                <t t-esc="day"/>
                            </span>
                        </div>
                        <br/>
                        <table class="GeneratedTable">
                            <colgroup>
                                <col width='15%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='10%'/>
                                <col width='10%'/>
                                <col width='20%'/>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">Guest</th>
                                    <th class="text-center">Room</th>
                                    <th class="text-center">Rate Type</th>
                                    <th class="text-center">Particular</th>
                                    <th class="text-center">Booking</th>
                                    <th class="text-center">Room</th>
                                    <th class="text-center">Discount</th>
                                    <th class="text-center">Net</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="with-border">
                                            <span t-field="doc.partner_id.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.room_id.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.rate_type"/>
                                        </td>
                                        <td class="with-border">
                                            <!--                                            <t t-esc="sum(doc.folio_id.line_ids.filtered(lambda l: l.particulars == 'Room Charge').mapped('amount'))"/>-->
                                            <span t-field="doc.type"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.booking_id"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.room_id"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.booking_line_id.discount" widget="monetary"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.amount" widget="monetary"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <table class="GeneratedTable">
                            <colgroup>
                                <col width='15%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='20%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        VAT Total
                                    </th>
                                    <th class="text-center">
                                        Municipality Total
                                    </th>
                                    <th class="text-center">
                                        Room Charge Total
                                    </th>
                                    <th class="text-center" t-if="total_food">
                                        Food Total
                                    </th>
                                    <th class="text-center" t-if="total_laundry">
                                        Laundry Total
                                    </th>
                                    <th class="text-center" t-if="total_rent">
                                        Rent Total
                                    </th>
                                    <th class="text-center" t-if="total_discount">
                                        Discount Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="with-border">
                                        <span t-esc="total_vat"/>
                                    </td>
                                    <td class="with-border">
                                        <span t-esc="total_municipality"/>
                                    </td>
                                    <td class="with-border">
                                        <span t-esc="total_room_charge"/>
                                    </td>
                                    <td class="with-border" t-if="total_food">
                                        <span t-esc="total_food"/>
                                    </td>
                                    <td class="with-border" t-if="total_laundry">
                                        <span t-esc="total_laundry"/>
                                    </td>
                                    <td class="with-border" t-if="total_rent">
                                        <span t-esc="total_rent"/>
                                    </td>
                                    <td class="with-border" t-if="total_discount">
                                        <span t-esc="total_discount"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
