<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_payment" model="report.paperformat">
            <field name="name">Folio Medium Margin</field>
            <field name="default" eval="True"/>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <record id="payment_report_action" model="ir.actions.report">
            <field name="name">Folio Report</field>
            <field name="model">booking.payment.register</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_booking.payment_report</field>
            <field name="report_file">hotel_booking.payment_report</field>
            <field name="paperformat_id" ref="paperformat_payment"/>
            <field name="print_report_name">'Folio Report- %s' % (object.communication).replace('/', '')</field>
            <field name="binding_model_id" ref="hotel_booking.model_booking_payment_register"/>
            <field name="binding_type">report</field>
        </record>
        <template id="payment_report">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-family:Arial !important;">
                        <style>
                            table.GeneratedTable {
                                width: 100%;
                                border-collapse: collapse;
                                border-width: 1px;
                                border-color: #000000;
                                border-style: solid;
                                font-size: 14px;
                                color: #000000;
                            }

                            table.GeneratedTable th, table.GeneratedTable td {
                                border: 1px solid #000000;
                                padding: 0; /* Remove extra padding */
                                text-align: center; /* Center align text */
                                white-space: nowrap; /* Prevent extra line breaks */
                            }

                            table.GeneratedTable th {
                                background-color: #f5f5f5; /* Optional: Add a light background to headers */
                                font-weight: bold;
                            }

                            table.GeneratedTable td {
                                font-size: 12px; /* Adjust font size for compactness */
                            }

                            .m-0 {
                                margin: 0 !important; /* Remove margins for Bootstrap classes */
                            }

                            .p-0 {
                                padding: 0 !important; /* Remove padding for Bootstrap classes */
                            }
                        </style>
                        <t t-set="hotel" t-value="doc.booking.hotel_id"/>
                        <t t-set="company" t-value="doc.booking.hotel_id.company_id"/>
                        <t t-set="booking" t-value="doc.booking"/>
                        <t t-set="guest" t-value="doc.booking.partner_id"/>
                        <t t-set="booking_line" t-value="doc.booking"/>
                        <t t-set="room" t-value="doc.booking.room_id"/>
                        <!--hotel info-->
                        <table class="GeneratedTable">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <t t-esc="company.name"/>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">
                                        <t t-esc="company.partner_id.contact_address"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center">
                                        Phone:<t t-esc="company.phone"/>;
                                        E-mail:
                                        <t t-esc="company.email"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center">
                                        URL:
                                        <t t-esc="company.website"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center">
                                        <span style="font-size: 20px; font-weight: bold;">Payment voucher / سند سداد</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--guest info-->
                        <table class="GeneratedTable">
                            <tbody>
                                <tr>
                                    <td>
                                        Folio No.
                                    </td>
                                    <td>
                                        <t t-esc="doc.communication"/>
                                    </td>
                                    <td>
                                        Payment Date
                                    </td>
                                    <td>
                                        <!--                                        <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S %p')"/>-->
                                        <t t-esc="doc.payment_date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Guest Name
                                    </td>
                                    <td>
                                        <t t-esc="guest.name"/>
                                    </td>
                                    <td>
                                        Pay Method
                                    </td>
                                    <td>
                                        <t t-esc="doc.journal_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Amount
                                    </td>
                                    <td>
                                        <t t-esc="doc.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td>
                                        Receipt No.
                                    </td>
                                    <td>
                                        <t t-esc="doc.communication"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Remark
                                    </td>
                                    <td>
                                        ----------------------------------------------------
                                    </td>
                                    <td>
                                        Entered On
                                    </td>
                                    <td>
                                        <t t-esc="booking.check_in.strftime('%Y-%m-%d %H:%M:%S %p')"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Notice
                                    </td>
                                    <td>
                                        Receipt NOTICE
                                        <br/>
                                        Receipt NOTICE
                                    </td>
                                    <td>
                                        Room
                                    </td>
                                    <td>
                                        <t t-foreach="booking.line_ids" t-as="o">
                                            <t t-esc="o.room_id.name"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--hotel sign-->
                        <table class="GeneratedTable">
                            <tbody>
                                <tr>
                                    <td class="bold-text">
                                        User
                                    </td>
                                    <td>

                                    </td>
                                    <td>
                                        <t t-esc="doc.user_id.name"/>
                                    </td>
                                    <td>

                                    </td>
                                    <td class="bold-text">
                                        Guest Signature
                                    </td>
                                    <td>

                                    </td>
                                    <td class="bold-text">
                                        Authorized Signatory
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br/>
                    <br/>
                    <br/>
