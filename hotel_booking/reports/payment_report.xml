                                    </td>
                                    <td>
                                        Room
                                    </td>
                                    <td>
                                        <t t-foreach="booking.line_ids" t-as="o">
                                            <t t-esc="o.room_id.name"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--hotel sign-->
                        <table class="GeneratedTable">
                            <tbody>
                                <tr>
                                    <td class="bold-text">
                                        User
                                    </td>
                                    <td>

                                    </td>
                                    <td>
                                        <t t-esc="doc.user_id.name"/>
                                    </td>
                                    <td>

                                    </td>
                                    <td class="bold-text">
                                        Guest Signature
                                    </td>
                                    <td>

                                    </td>
                                    <td class="bold-text">
                                        Authorized Signatory
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>
