<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_hotel" model="ir.ui.view">
            <field name="name">hotel.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h1" position="after">
                    <h1>
                        <field name="english_name" placeholder="e.g. My Company"/>
                    </h1>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
<!--                        <field name="company_has_hotel" invisible="1"/>-->
                        <button name="button_open_hotel_form" type="object" string="Create Hotel" class="oe_highlight"
                            attrs="{'invisible': [('related_hotel_id', '!=', False)]}"/>
                    </header>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="hotel" string="Hotel" attrs="{'invisible': [('related_hotel_id', '=', False)]}">
                        <group>
                            <field name="related_hotel_id"/>
                            <field name="can_edit_audit_date" invisible="1"/>
                            <field name="audit_date" attrs="{'readonly': [('can_edit_audit_date', '=', False)]}"/>
                            <field name="is_required_company"/>
                            <field name="limited_access_payment"/>
                            <field name="use_whatsapp"/>
                            <field name="checkout_charge"/>
                        </group>
                    </page>
                    <page string="Bank Details">
                        <group>
                            <group>
                                <field name="bank_name"/>
                                <field name="account_name"/>
                                <field name="account_number"/>
                                <field name="account_iban"/>
                                <field name="account_swift"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>