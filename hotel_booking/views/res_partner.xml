<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_form_res_partner" model="ir.ui.view">
        <field name="name">res.partner.form.hotel</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="replace">
                <field name="company_type" options="{'horizontal': true}" widget="radio"
                       attrs="{'invisible':[('has_access_company','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="company_arabic_name" default_focus="1" placeholder="Company Arabic Name"
                       attrs="{'required' : [('type', '=', 'contact'),('is_company','=', True)], 'invisible': [('is_company','=', False)]}"/>
                <field name="person_arabic_name" default_focus="1" placeholder="Person Arabic Name"
                       attrs="{'invisible': [('is_company','=', True)]}"/>
            </xpath>
            <div name="button_box" position="inside">
                <field name="has_access_company" invisible="1"/>
                <field name="customer_rank" invisible="1"/>
                <button name="action_open_bookings" type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                        groups="hotel_booking.group_hotel_booking_user"
                        attrs="{'invisible': [('customer_rank', '=', 0)]}">
                    <div class="o_stat_info">
                        <field name="customer_due_amount" class="o_stat_value"/>
                        <span class="o_stat_text">Due Amount Booking</span>
                    </div>
                </button>
            </div>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='other_id']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='street']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='street2']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='district']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='zip']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="attrs">{'required': [('company_type', '=','company'),('is_required_company','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="before">
                <field name="birth_date"/>
                <field name="travel_type" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="company_code" attrs="{'invisible': [('travel_type', '!=', 'company')]}"/>
                <field name="online_travel_agent"/>
                <field name="market_segmentation_id"/>
                <field name="check"/>
                <field name="national_id"/>
                <field name="passport_no"/>
                <field name="front_id"/>
                <field name="back_id"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_city_ledger" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="is_credit_limit" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="customer_credit_limit" attrs="{'invisible': [('is_credit_limit', '!=', True)]}"/>
                <field name="customer_due_amount" attrs="{'invisible': [('is_credit_limit', '!=', True)]}"/>
                <field name="balance" attrs="{'invisible': [('is_credit_limit', '!=', True)]}"/>
                <field name="is_required_company" invisible="1"/>
                <field name="total_advanced_payment"/>
            </xpath>
        </field>
    </record>

    <record id="view_tree_res_partner_inherit" model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="company_code" optional="hide"/>
                <field name="customer_credit_limit" optional="hide"/>
                <field name="customer_due_amount" optional="hide"/>
                <field name="balance" optional="hide"/>
                <field name="total_advanced_payment" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_search" model="ir.ui.view">
        <field name="name">res.partner.search.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <filter string="Travel Company" name="travel_company" domain="[('travel_type','=', 'company')]"/>
                <filter string="Travel Agent" name="travel_agent" domain="[('travel_type','=', 'agent')]"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="action_view_companies_database" model="ir.actions.act_window">
        <field name="name">Companies Database</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="domain">[('is_company','=',True)]</field>
        <field name="context">{'default_company_type':'company', 'create': False}</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="action_view_customers_database" model="ir.actions.act_window">
        <field name="name">Customers Database</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="domain">[('is_company','!=',True)]</field>
        <field name="context">{'default_company_type':'person'}</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="contacts.res_partner_menu_contacts"
              groups="hotel_booking.contact_menu_group"
              name="Contacts"
              action="contacts.action_contacts"
              parent="contacts.menu_contacts"
              sequence="2"/>

    <menuitem id="contacts.res_partner_menu_config"
              name="Configuration"
              parent="contacts.menu_contacts"
              groups="hotel_booking.contact_menu_group"
              sequence="2"/>

    <menuitem id="company_database_menuitem" name="Companies Database" parent="contacts.menu_contacts"
              groups="company_contact_menu_group"
              action="action_view_companies_database"
              sequence="3"/>

    <menuitem id="customer_database_menuitem" name="Customers Database" parent="contacts.menu_contacts"
              groups="customers_contact_menu_group"
              action="action_view_customers_database"
              sequence="4"/>


</odoo>