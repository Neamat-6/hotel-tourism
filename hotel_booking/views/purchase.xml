<odoo>
    <record id="purchase_order_form_views" model="ir.ui.view">
        <field name="name">purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="hotel_id" optional="hide"/>
                <field name="room_type_id" optional="hide"/>
                <field name="room_id" optional="hide"/>
                <field name="price" optional="hide"/>
                <field name="check_in" optional="hide"/>
                <field name="check_out" optional="hide"/>
                <field name="number_of_days" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>