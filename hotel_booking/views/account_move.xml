<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_payment_tree_inherit" model="ir.ui.view">
        <field name="name">account_payment_tree_inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="booking_id"/>
                <field name="folio_id"/>
            </xpath>

        </field>
    </record>

    <record id="view_account_move_form_hotel_booking" model="ir.ui.view">
        <field name="name">account.move.form.hotel.booking</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="guest_id" attrs="{'readonly':[('state','!=','draft')], 'invisible':[('move_type','!=','out_invoice')]}"
                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                <field name="booking_id" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="memo"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="hotel_id" optional="hide"/>
                <field name="room_type_id" optional="hide"/>
                <field name="room_id" optional="hide"/>
                <field name="price" optional="hide"/>
                <field name="number_of_adults" optional="hide"/>
                <field name="number_of_children" optional="hide"/>
                <field name="check_in" optional="hide"/>
                <field name="check_out" optional="hide"/>
                <field name="number_of_days" optional="hide"/>
            </xpath>
        </field>
    </record>


</odoo>