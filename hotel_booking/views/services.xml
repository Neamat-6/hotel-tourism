<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_form_hotel_services" model="ir.ui.view">
        <field name="name">hotel.services.form</field>
        <field name="model">hotel.services</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="price"/>
                            <field name="type"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_services" model="ir.actions.act_window">
        <field name="name">services</field>
        <field name="res_model">hotel.services</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu pricelist -->
    <menuitem id="menu_hotel_services" name="Servcies" action="action_hotel_services" sequence="1000"
              parent="hotel_booking.menu_hotel_configuration" groups="hotel_booking.menu_hotel_services_group"/>


</odoo>