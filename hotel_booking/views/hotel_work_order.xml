<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hotel_work_order_view_form" model="ir.ui.view">
            <field name="name">hotel_work_order_view_form</field>
            <field name="model">hotel.work.order</field>
            <field name="arch" type="xml">
                <form string="hotel_work_order_form">
                    <header>
                        <button name="button_assign" type="object" string="Assign" class="oe_highlight" states="new"/>
                        <button name="button_progress" type="object" string="Progress" class="oe_highlight"
                                states="assigned"/>
                        <button name="button_done" type="object" string="Done" class="oe_highlight" states="progress"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="name"/>
                        <group>
                            <group>
                                <field name="order_type"/>
                                <field name="date_start"/>
                                <field name="room_id"/>
                                <field name="type"/>
                                <field name="employee_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="date_stop"/>
                                <field name="date_deadline" invisible="1"/>
                                <field name="priority"/>
                                <field name="department_id"/>
                                <field name="send_whatsapp"/>
                                <field name="employee_ids" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Attachment">
                                <group>
                                    <field name="attachment" filename="attachment_name" class="oe_inline"/>
                                    <field name="attachment_name" invisible="1" class="oe_inline"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hotel_work_order_view_tree" model="ir.ui.view">
            <field name="name">hotel_work_order_view_tree</field>
            <field name="model">hotel.work.order</field>
            <field name="arch" type="xml">
                <tree string="hotel_work_order_view_tree">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="date_deadline"/>
                    <field name="room_id"/>
                    <field name="type"/>
                    <field name="priority"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="pending_hotel_work_order_action" model="ir.actions.act_window">
            <field name="name">Pending Work Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.work.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','!=', 'done')]</field>
        </record>
        <record id="complete_hotel_work_order_action" model="ir.actions.act_window">
            <field name="name">Complete Work Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.work.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=', 'done')]</field>
        </record>
        <menuitem id="hotel_work_order_root" name="Work Orders" sequence="15" parent="hotel_booking.housekeeping_root_menu"/>
        <menuitem id="pending_hotel_work_order_root" name="Pending Work Orders" sequence="1"
                  action="pending_hotel_work_order_action" parent="hotel_work_order_root"/>
        <menuitem id="complete_hotel_work_order_root" name="Complete Work Orders" sequence="2"
                  action="complete_hotel_work_order_action" parent="hotel_work_order_root"/>
    </data>
</odoo>