<odoo>
    <record id="view_season_duration_form" model="ir.ui.view">
        <field name="name">season.form</field>
        <field name="model">season.duration</field>
        <field name="arch" type="xml">
            <form string="Season">
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Season Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="date_from"/>
                        <field name="hijri_date_from" readonly="1"/>
                        <field name="date_to"/>
                        <field name="hijri_date_to" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_season_duration_tree" model="ir.ui.view">
        <field name="name">season.tree.view</field>
        <field name="model">season.duration</field>
        <field name="arch" type="xml">
            <tree string="Seasons">
                <field name="name"/>
                <field name="date_from"/>
                <field name="hijri_date_from" readonly="1"/>
                <field name="date_to"/>
                <field name="hijri_date_to" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_season_duration_view" model="ir.actions.act_window">
        <field name="name">Seasons Duration</field>
        <field name="res_model">season.duration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_season_management" name="Seasons Management" parent="hotel_booking.menu_hotel_configuration"
              action="action_season_duration_view"/>

</odoo>