<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="view_account_payment_inherit_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath position="inside" expr="//header">
                <field name="city_ledger_payment" invisible="1"/>
                <field name="is_internal_transfer" invisible="1"/>
                <button name="action_advance_payment" class="oe_highlight" type="object" string="Advance Payment"/>
                <button name="action_settled_payment" class="oe_highlight" type="object"
                        string="Settled Booking Payment"/>
            </xpath>
            <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                <attribute name="attrs">{'readonly':[('state', '!=', 'draft')],'invisible':['|','|', ('partner_type','!=','customer'), ('is_internal_transfer', '=', True), ('city_ledger_payment', '=', True)]}</attribute>
            </xpath>
        </field>
        </record>

    <record id="view_account_payment_inherit_form_booking" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="hotel_booking.account_payment_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name="journal_dis_partner_id" position="after">
                <field name="city_ledger_payment" invisible="1"/>
                <field name="hotel_booking_ids" widget="many2many_tags" force_save="1" invisible="1"
                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"
                       attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"/>
                <field name="booking_ids" widget="many2many_tags" force_save="1" invisible="1"
                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"
                       attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"/>
                <field name="folios_ids" widget="many2many_tags" force_save="1" invisible="1"
                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"
                       attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"/>
                <field name="hotel_booking_id" domain="[('id','=',booking_ids)]" invisible="1"
                       attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"/>
                <field name="partner_amount" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                       force_save="1"/>
                <field name="hotel_ids" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                       widget="many2many_tags"
                       force_save="1"/>
                <field name="partner_advance_payment" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                       force_save="1"/>
                <field name="new_check_in" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                       force_save="1"/>
                <field name="new_check_out" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                       force_save="1"/>

                <!--                <field name="partner_amount_paid" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"-->
                <!--                       force_save="1"/>-->
                <!--                <field name="partner_amount_due" attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"-->
                <!--                       force_save="1"/>-->
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}
                </attribute>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}
                </attribute>
            </field>
            <field name="is_internal_transfer" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="journal_partner_id" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="booking_id" position="attributes">
                <attribute name="attrs">{'readonly': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="folio_id" position="attributes">
                <attribute name="attrs">{'readonly': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="booking_id" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>

            <field name="folio_id" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>

            <field name="hotel_room_ids" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="amount_due" position="attributes">
                <attribute name="attrs">{'invisible': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="payment_type" position="attributes">
                <attribute name="attrs">{'readonly': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="company_type" position="attributes">
                <attribute name="attrs">{'readonly': [('city_ledger_payment', '=', True)]}</attribute>
            </field>
            <field name="audit_date" position="after">
                <field name="payment_note"/>
                <field name="system_note"/>
            </field>
            <xpath expr="//group" position="after">
                <group>
                    <div class="row">
                        <div class="col-3"/>
                        <div class="col-3">
                            <button name="unselect_all_booking" type="object" string="Unselect All Bookings"
                                    attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                                    class="oe_highlight"/>
                        </div>
                        <div class="col-3">
                            <button name="select_all_bookings" type="object" string="Select All Bookings"
                                    attrs="{'invisible': [('city_ledger_payment', '!=', True)]}"
                                    class="oe_highlight"/>
                        </div>
                    </div>
                </group>
                <notebook attrs="{'invisible': [('city_ledger_payment', '!=', True)]}">
                    <page string="Bookings">
                        <field name="h_booking_ids"
                               options="{'no_create': True, 'no_create_edit':True, 'no_open': True,'no_quick_create': True}">
                            <tree editable="bottom">
                                <field name="is_selected"/>
                                <field name="name" readonly="1"/>
                                <field name="company_booking_source" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="new_check_in" readonly="1"/>
                                <field name="new_check_out" readonly="1"/>
                                <field name="paid_amount_city_ledger" readonly="1"/>
                                <field name="company_paid" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


    <record id="action_city_ledger_payment" model="ir.actions.act_window">
        <field name="name">City Ledger Payments</field>
        <field name="res_model">account.payment</field>
        <field name="domain">[('city_ledger_payment','=',True)]</field>
        <field name="context">{'default_city_ledger_payment': True,
            'default_partner_type': 'customer','default_journal_id':False,'default_company_type':'company'}
        </field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Register a City Ledger payment
            </p>
        </field>
    </record>

    <menuitem id="menu_account_payment_city_ledger" name="City Ledger Payment" parent="account.menu_finance_receivables"
              action="hotel_booking.action_city_ledger_payment" sequence="21"/>

    <menuitem id="menu_hotel_booking_city_ledger" name="City Ledger Payment"
              parent="hotel_booking.menu_hotel_payment"
              action="hotel_booking.action_city_ledger_payment" sequence="1"/>


</odoo>