<odoo>
    <record id="account_payment_form_view_inherit" model="ir.ui.view">
        <field name="name">account_payment_form_view_inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="company_type" widget="radio" options="{'horizontal': true}"/>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="booking_id" domain="[('amount_due','>',0)]"/>
                <!--                       attrs="{'invisible': [('is_city_ledger','=',True)]}"/>-->
                <field name="folio_id" domain="[('id','in', folio_ids)]" options="{'no_create': True,'no_open': True}"/>
                <!--                       attrs="{'invisible': [('is_city_ledger','=',True)]}"/>-->
                <field name="hotel_room_ids" widget="many2many_tags"/>
                <field name="hotel_folios_ids" invisible="1"/>
                <field name="audit_date"/>
                <field name="folio_ids" invisible="1"/>
                <!--                <field name="is_city_ledger" invisible="1"/>-->
                <field name="amount_due"/>
                <!--                attrs="{'invisible': [('is_city_ledger','=',True)]}"-->
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True,'no_open':True}
                </attribute>
                <!--                domain="[('is_city_ledger','=',True)]"-->
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_partner_id" options="{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}"/>
            </xpath>
            <xpath expr="//field[@name='destination_journal_id']" position="after">
                <field name="city_ledger_payment" invisible="1"/>
                <field name="journal_dis_partner_id" attrs="{'invisible': [('city_ledger_payment', '!=', True)], 'readonly':[('state','!=','draft')]}"
                       options="{'no_quick_create': True, 'no_create_edit' : True, 'no_create': True, 'no_edit': True,'no_open':True}"
                />
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True,'no_open':True}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='destination_journal_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True,'no_open':True}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}
                </attribute>
                <attribute name="widget">selection</attribute>
            </xpath>
            <xpath expr="//field[@name='booking_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, 'no_create':
                    True,'no_open':True,
                    'no_edit': True}
                </attribute>
                <attribute name="widget">selection</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_payment_tree" model="ir.ui.view">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/header" position="inside">
                <button name="print_custom_payments" type="object" string="Print Selected Payments"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <record id="account.action_report_payment_receipt" model="ir.actions.report">
        <field name="name">Payment Receipt</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account.report_payment_receipt</field>
        <field name="report_file">account.report_payment_receipt</field>
        <field name="binding_model_id" ref="model_account_payment"/>
        <field name="binding_type">report</field>
    </record>


</odoo>