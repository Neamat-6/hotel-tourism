<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Menu Root -->
    <menuitem id="menu_hotels_task_root" name="Hotels Task" sequence="20"
              groups="hotel_booking.group_hotel_booking_user"/>

    <menuitem id="menu_hotel_root" name="Extra Net" sequence="20"
              groups="hotel_booking.extra_net_group"/>
    <menuitem id="menu_hotel_payment" name="Payments" parent="hotel_booking.menu_hotels_task_root" sequence="21"/>

    <!-- Menu Configuration -->
    <menuitem id="menu_hotel_configuration" name="Configuration" sequence="500"
              groups="hotel_booking.htask_configuration_group"/>


    <record id="action_hotel_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hotel_booking', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_hotel_settings" name="Settings" action="action_hotel_settings" groups="base.group_system"
              sequence="0"/>


    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hotel.booking</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Hotel Booking" string="Hotel Booking"
                     data-key="hotel_booking">
                    <h2>Hotel Booking</h2>
                    <div class="row mt16 o_settings_container">
                        <!--                        <div class="col-lg-6 o_setting_box">-->
                        <!--                            <div class="o_setting_left_pane">-->
                        <!--                            </div>-->
                        <!--                            <div class="o_setting_right_pane">-->
                        <!--                                <span class="o_form_label">Default Room Type</span>-->
                        <!--                                <div class="text-muted">Set default room type in booking.</div>-->
                        <!--                                <field name="hotel_room_type_default_id"/>-->
                        <!--                            </div>-->
                        <!--                        </div>-->
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Taxes</span>
                                <div class="text-muted">Set default taxes in booking.</div>
                                <field name="hotel_default_tax_ids" widget="many2many_tags"
                                       domain="[('type_tax_use', '=', 'sale')]"/>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Customer</span>
                                <div class="text-muted">Set default customer in booking.</div>
                                <field name="hotel_default_customer_id"/>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Check-In/Check-Out Points</span>
                                <div class="text-muted">Configure the points to calculate the number of days consumed
                                </div>
                                <table>
                                    <tr>
                                        <td>
                                            <span class="o_form_label">Check-In Point</span>
                                        </td>
                                        <td>
                                            <field name="hotel_check_in_point" widget="float_time"/>
                                            <field name="hotel_check_in_am_pm"/>
                                        </td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="o_form_label">Check-Out Point</span>
                                        </td>
                                        <td>
                                            <field name="hotel_check_out_point" widget="float_time"/>
                                            <field name="hotel_check_out_am_pm"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="o_form_label">Timezone</span>
                                        </td>
                                        <td>
                                            <field name="hotel_timezone"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="hotel_booking_display_only_available"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Booking Only Available</span>
                                <div class="text-muted">If you check this box, only available rooms will be displayed in
                                    the booking screen.
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Particulars</span>
<!--                                <div class="text-muted">Set default taxes in booking.</div>-->
                                <field name="particulars"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_partner_action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company':
            True, 'default_customer_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a customer.
            </p>
        </field>
    </record>

    <menuitem id="menu_booking_customer" name="Customers" action="res_partner_action_customer" sequence="100" groups="hotel_booking.menu_booking_customer_group"
              parent="hotel_booking.menu_hotel_configuration"/>

    <!-- Tree -->
    <record id="view_tree_hotel_hotel" model="ir.ui.view">
        <field name="name">hotel.hotel.tree</field>
        <field name="model">hotel.hotel</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="room_count"/>
            </tree>
        </field>
    </record>

    <!--Form-->
    <record id="view_form_hotel_hotel" model="ir.ui.view">
        <field name="name">hotel.hotel.form</field>
        <field name="model">hotel.hotel</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Ground Floor"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="country_id" options="{'no_open': True, 'no_quick_create': True}"/>
                            <field name="state_id" placeholder="City"
                                   options="{'no_open': True, 'no_quick_create': True}"
                            />
                            <field name="default_room_type_id" domain="[('hotel_id','=', id)]"/>
                            <field name="hotel_rate" widget="priority"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rooms">
                            <field name="room_ids"/>

                        </page>
                        <page string="Floors">
                            <field name="floor_ids"/>
                        </page>
                        <page string="Facilities">
                            <field name="facility_line_ids" widget="many2many">
                                <tree editable="bottom">
                                    <field name="facility_id" required="1"/>
                                    <field name="qty"/>
                                    <field name="image"/>
                                    <field name="description"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="facility_id"/>
                                        <field name="qty"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Accounting" name="accounting">
                            <group>
                                <field name="room_charge_account_id"/>
                                <field name="food_revenue_account_id"/>
                                <field name="beverage_revenue_account_id"/>
                                <field name="laundry_revenue_account_id"/>
                                <field name="rent_account_id"/>
                                <field name="municipality_account_id"/>
                            </group>
                        </page>
                        <page name="hotel_info" string="Hotel Information">
                            <group>
                                <group>
                                    <field name="image" widget="image" class="oe_avatar"/>
                                    <field name="address"/>
                                </group>
                                <group>
                                    <field name="can_edit_expiration_date" invisible="1"/>
                                    <field name="expiration_date" attrs="{'readonly': [('can_edit_expiration_date', '=', False)]}"/>
                                    <field name="description"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action-->
    <record id="action_hotel_hotel" model="ir.actions.act_window">
        <field name="name">Hotels</field>
        <field name="res_model">hotel.hotel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Hotels -->
    <menuitem id="menu_hotel_hotel" name="Hotels" parent="menu_hotel_configuration" action="action_hotel_hotel" groups="hotel_booking.hotel_hotel_menu_group"
              sequence="50"/>



</odoo>