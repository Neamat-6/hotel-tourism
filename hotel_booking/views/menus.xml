<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_hotel_booking_today_arrival" model="ir.actions.act_window">
            <field name="name">Today Arrival</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today_arrival': 1}</field>
        </record>
        <record id="action_hotel_booking_tomorrow_arrival" model="ir.actions.act_window">
            <field name="name">Tomorrow Arrival</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_tomorrow_check_in': 1}</field>
        </record>
        <record id="action_hotel_booking_next7" model="ir.actions.act_window">
            <field name="name">Next 7 Days Arrival</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_next7_check_in': 1}</field>
        </record>
        <record id="action_hotel_booking_today_departure" model="ir.actions.act_window">
            <field name="name">Today Duo Out</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today_departure': 1}</field>
        </record>
        <record id="action_hotel_booking_tomorrow_departure" model="ir.actions.act_window">
            <field name="name">Tomorrow Duo Out</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_tomorrow_departure': 1}</field>
        </record>


        <!-- Menu Reservations List -->
        <menuitem id="menu_reservation_list_root" name="Reservations List" sequence="11" parent="menu_front_office"/>
        <menuitem id="menu_hotel_booking_today_arrival" name="Today Arrival" action="action_hotel_booking_today_arrival" parent="menu_reservation_list_root"
                  sequence="1"/>
        <menuitem id="menu_hotel_booking_tomorrow_arrival" name="Tomorrow Arrival" action="action_hotel_booking_tomorrow_arrival"
                  parent="menu_reservation_list_root"
                  sequence="2"/>
        <menuitem id="menu_hotel_booking_next7" name="Next 7 Days Arrival" action="action_hotel_booking_next7"
                  parent="menu_reservation_list_root"
                  sequence="3"/>

        <menuitem id="menu_departure_list_root" name="Departure List" sequence="12" parent="menu_front_office"/>
        <menuitem id="menu_hotel_booking_today_departure" name="Today Duo Out"
                  action="action_hotel_booking_today_departure" parent="menu_departure_list_root" sequence="1"/>
        <menuitem id="menu_hotel_booking_tomorrow_departure" name="Tomorrow Due Out"
                  action="action_hotel_booking_tomorrow_departure" parent="menu_departure_list_root" sequence="2"/>
        <menuitem id="out_of_order_menuitem" name="Out of Order" sequence="66" action="out_of_order_action" parent="menu_front_office"/>
    </data>
</odoo>