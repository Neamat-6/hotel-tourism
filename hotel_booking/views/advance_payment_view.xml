<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="advance_payment_view_form" model="ir.ui.view">
            <field name="name">advance_payment_view_form</field>
            <field name="model">advance.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="journal_id"/>
                                <field name="advance_payment_account_id"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_payment" type="object" string="Create Payment" class="oe_highlight"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="advance_payment_action" model="ir.actions.act_window">
            <field name="name">Advance Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">advance.payment</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>