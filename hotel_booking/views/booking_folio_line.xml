<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="booking_folio_line_tree_view" model="ir.ui.view">
        <field name="name">booking_folio_line_tree_view</field>
        <field name="model">booking.folio.line</field>
        <field name="arch" type="xml">
            <tree edit="1" create="0" delete="1" editable="bottom">
                <field name="day"/>
                <field name="particulars"/>
                <field name="description"/>
                <field name="amount"/>
                <field name="type"/>
                <field name="booking_id"/>
                <field name="folio_id"/>
                <field name="room_id"/>
                <field name="booking_number"/>
                <field name="partner_id"/>
                <field name="hotel_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="booking_source_id"/>
                <field name="name"/>
                <field name="payment_id"/>
                <field name="state"/>
                <field name="rate_plan"/>
                <field name="rate_type"/>
            </tree>
        </field>
    </record>

    <record id="view_gantt_booking_folio_line" model="ir.ui.view">
        <field name="name">Booking Folio Gantt View</field>
        <field name="model">booking.folio.line</field>
        <field name="arch" type="xml">
            <gantt js_class="planning_gantt"
                   date_start="check_in"
                   date_stop="check_out"
                   default_group_by="name"
                   default_scale="week"
                   string="Folio Lins"
                   total_row="True"
                   scales="day,week,month,year"
                   precision="{'day': 'hour:full', 'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}"
                   display_unavailability="1"
                   sample="1">
                <field name="name"/>
                <templates>
                    <div t-name="gantt-popover" class="o_gantt_popover">
                        <div class="o_gantt_popover_content">
                            <ul class="o_gantt_popover_list">
                                <li>
                                    <div>
                                        <strong>Check-in Date:</strong>
                                        <t t-esc="check_in.format('YYYY-MM-DD hh:mm:ss A')"/>
                                    </div>
                                </li>
                                <li>
                                    <div>
                                        <strong>Check-out Date:</strong>
                                        <t t-esc="check_out.format('YYYY-MM-DD hh:mm:ss A')"/>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>


    <record id="action_view_booking_folio_line" model="ir.actions.act_window">
        <field name="name">Booking Folios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.folio.line</field>
        <field name="view_mode">tree,gantt,pivot</field>
    </record>

    <menuitem id="menu_booking_folio_line" name="Booking Folios" parent="menu_hotel_configuration"
              action="action_view_booking_folio_line"
              groups="base.group_no_one"
              sequence="3"/>

</odoo>