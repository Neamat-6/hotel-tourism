<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="folio_service_view_form" model="ir.ui.view">
            <field name="name">folio_service_view_form</field>
            <field name="model">folio.service</field>
            <field name="inherit_id" ref="hotel_booking_folio.folio_service_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='amount_municipality']" position="attributes">
                    <attribute name="string">Total Service Charge</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>