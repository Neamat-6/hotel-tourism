<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_form_plane_type" model="ir.ui.view">
        <field name="name">plane.type.form</field>
        <field name="model">plane.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="class_type"/>
                        </group>
                        <group>
                            <field name="capacity"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_plane_type" model="ir.ui.view">
        <field name="name">plane.type.tree</field>
        <field name="model">plane.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="class_type"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>

    <record id="action_plane_type_view" model="ir.actions.act_window">
        <field name="name">Plane Type</field>
        <field name="res_model">plane.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_plane_type" name="Plane Type" parent="menu_hotel_configuration" action="action_plane_type_view"
              sequence="61"/>


</odoo>