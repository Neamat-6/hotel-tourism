<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hotel_reservation_package_form_view" model="ir.ui.view">
        <field name="name">hotel.reservation.package.form.view</field>
        <field name="model">hotel.reservation.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="hotel_contract_id" required="1"/>
                            <field name="hotel_id" widget="selection"/>
                            <field name="room_type_ids" invisible="1"/>
                        </group>
                        <group>
                            <field name="room_type" domain="[('id','in',room_type_ids)]" required="1"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="unit_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>