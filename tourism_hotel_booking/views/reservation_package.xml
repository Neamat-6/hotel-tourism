<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_form_reservation_package" model="ir.ui.view">
        <field name="name">reservation.package.form</field>
        <field name="model">reservation.package</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" states="draft"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" states="confirm"/>
                    <button name="action_draft" type="object" string="Reset To Draft" class="oe_highlight"
                            states="confirm"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="ref" string="Ref #"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Package Info">
                            <field name="name"/>
                            <field name="package_capacity"/>
                        </group>
                        <group string="Package Date">
                            <field name="package_start_date"/>
                            <field name="package_end_date"/>
                            <field name="reservation_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Hotels">
                            <field name="hotel_reservation_package_ids">
                                <tree>
                                    <field name="hotel_id"/>
                                    <field name="room_type_ids" invisible="1"/>
                                    <field name="room_type" domain="[('id','in',room_type_ids)]"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Planes">
                            <field name="plane_reservation_package_ids">
                                <tree>
                                    <field name="plane_contract_id"/>
                                    <field name="plane_company_id" invisible="0"/>
                                    <field name="plane_type_id" invisible="0"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Bus">
                            <field name="bus_reservation_package_ids">
                                <tree>
                                    <field name="bus_contract_id"/>
                                    <field name="transportation_company_id"/>
                                    <field name="bus_type_ids" invisible="1"/>
                                    <field name="bus_type_id" domain="[('id','in',bus_type_ids)]"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_reservation_package" model="ir.ui.view">
        <field name="name">reservation.package.tree</field>
        <field name="model">reservation.package</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="package_start_date"/>
                <field name="package_end_date"/>
                <field name="package_capacity"/>
            </tree>
        </field>
    </record>

    <record id="action_reservation_package_view" model="ir.actions.act_window">
        <field name="name">Reservation Package</field>
        <field name="res_model">reservation.package</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_reservation_package" name="Reservation Package" parent="menu_hotel_configuration"
              action="action_reservation_package_view"
              sequence="61"/>


</odoo>