<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_tree_hotel_facility" model="ir.ui.view">
        <field name="name">hotel.facility.tree</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_form_hotel_facility" model="ir.ui.view">
        <field name="name">hotel.facility.form</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Kitchen"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_facility" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">hotel.facility</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu facility -->
<!--    <menuitem id="menu_hotel_facility" name="Facilities" parent="menu_hotel_configuration" action="action_hotel_facility" sequence="100"/>-->


</odoo>