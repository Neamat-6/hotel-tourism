<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hotel_destination_form" model="ir.ui.view">
        <field name="name">hotel.destination.form</field>
        <field name="model">hotel.destination</field>
        <field name="arch" type="xml">
            <form string="destination">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_destination_tree" model="ir.ui.view">
        <field name="name">hotel.destination.tree</field>
        <field name="model">hotel.destination</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_hotel_destination" model="ir.actions.act_window">
        <field name="name">Destinations</field>
        <field name="res_model">hotel.destination</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_hotel_configuration" name="Configuration" parent="tourism_hotel_booking.menu_hotel_root"/>


    <menuitem id="menu_hotel_destination" name="Destination" parent="menu_hotel_configuration" action="action_hotel_destination"/>


</odoo>