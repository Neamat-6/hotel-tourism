<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_form_bus_type" model="ir.ui.view">
        <field name="name">bus.type.form</field>
        <field name="model">bus.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="capacity"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_bus_type" model="ir.ui.view">
        <field name="name">bus.type.tree</field>
        <field name="model">bus.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>

    <record id="action_bus_type_view" model="ir.actions.act_window">
        <field name="name">Bus Type</field>
        <field name="res_model">bus.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bus_type" name="Bus Type" parent="menu_hotel_configuration" action="action_bus_type_view"
              sequence="60"/>


</odoo>