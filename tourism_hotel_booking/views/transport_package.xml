<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hotel_transport_package_form" model="ir.ui.view">
        <field name="name">hotel.transport.package.form</field>
        <field name="model">hotel.transport.package</field>
        <field name="arch" type="xml">
            <form string="Transportation Package">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Transport Lines">
                            <field name="transport_package_lines">
                                <tree editable="bottom">
                                    <field name="from_destination_id"/>
                                    <field name="to_destination_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_hotel_transport_package_tree" model="ir.ui.view">
        <field name="name">hotel.transport.package.tree</field>
        <field name="model">hotel.transport.package</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="action_hotel_transport_package" model="ir.actions.act_window">
        <field name="name">Transportation Package</field>
        <field name="res_model">hotel.transport.package</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_hotel_configuration" name="Configuration" parent="tourism_hotel_booking.menu_hotel_root"/>
    <menuitem id="menu_hotel_transport_package" name="Transportation Packages" parent="menu_hotel_configuration" action="action_hotel_transport_package"/>
</odoo>