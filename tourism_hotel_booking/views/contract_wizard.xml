<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="contract_wizard_form_view" model="ir.ui.view">
        <field name="name">contract.wizard.form.view</field>
        <field name="model">contract.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="contract_line_ids">
                        <tree editable="bottom">
                            <field name="room_type"/>
                            <field name="count"/>
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                            <field name="date_difference" readonly="1"/>
                            <field name="new_start_date"/>
                            <field name="new_end_date"/>
                            <field name="new_date_difference"/>
                            <field name="price"/>
                            <field name="total"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_bill" type="object" class="oe_highlight" string="Create Bill"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_wizard" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_contract_line_ids': contract_line_ids}</field>
    </record>

</odoo>