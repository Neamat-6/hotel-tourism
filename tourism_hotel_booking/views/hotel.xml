<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Menu Root -->
    <menuitem id="menu_hotel_root" name="Booking" sequence="20"
              web_icon="tourism_hotel_booking,static/description/odoo_icon.png"
              groups="hotel_booking.group_hotel_booking_user"/>

    <!-- Menu Configuration -->
    <menuitem id="menu_hotel_configuration" name="Configuration" parent="menu_hotel_root" sequence="500"
              groups="hotel_booking.group_hotel_booking_admin"/>


    <record id="action_hotel_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hotel_booking', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_hotel_settings" name="Settings" action="action_hotel_settings" groups="base.group_system"
              sequence="0" parent="menu_hotel_configuration"/>


    <record id="res_partner_action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company':
            True, 'default_customer_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a customer.
            </p>
        </field>
    </record>

    <menuitem id="menu_booking_customer" name="Customers" action="res_partner_action_customer" sequence="100"
              parent="menu_hotel_root"/>

    <!-- Tree -->
    <record id="view_tree_hotel_hotel" model="ir.ui.view">
        <field name="name">hotel.hotel.tree</field>
        <field name="model">tourism.hotel.hotel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="room_count"/>
            </tree>
        </field>
    </record>

    <!--Form-->
    <record id="view_form_hotel_hotel" model="ir.ui.view">
        <field name="name">hotel.hotel.form</field>
        <field name="model">tourism.hotel.hotel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Ground Floor"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="country_id" options="{'no_open': True, 'no_quick_create': True}"/>
                            <field name="state_id" placeholder="City"
                                   options="{'no_open': True, 'no_quick_create': True}"
                            />
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="default_room_type_id" domain="[('hotel_id','=', id)]"/>
                            <field name="hotel_rate" widget="priority"/>
                            <field name="check_in" widget="float_time"/>
                            <field name="check_out" widget="float_time"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="image_1920" widget="image" nolabel="1" class="oe_avatar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rooms">
                            <field name="room_ids"/>
                        </page>
                        <page string="Floors">
                            <field name="floor_ids"/>
                        </page>
                        <page string="Facilities">
                            <field name="facility_line_ids" widget="many2many">
                                <tree editable="bottom">
                                    <field name="facility_id" required="1"/>
                                    <field name="qty"/>
                                    <field name="image" widget="image" options="{'size':[0,40]}"/>
                                    <field name="description"/>
                                </tree>
                                <!--                                <form>-->
                                <!--                                    <group>-->
                                <!--                                        <field name="facility_id"/>-->
                                <!--                                        <field name="qty"/>-->
                                <!--                                        <field name="description"/>-->
                                <!--                                    </group>-->
                                <!--                                </form>-->
                            </field>
                        </page>
                        <page string="Accounting" name="accounting">
                            <group>
                                <field name="account_journal_id"/>
                            </group>
                            <group>
                                <field name="journal_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="facility_view_tree" model="ir.ui.view">
        <field name="name">facility_view_tree</field>
        <field name="model">tourism.hotel.room.facility</field>
        <field name="arch" type="xml">
            <tree string="facility_tree">
                <field name="facility_id"/>
                <field name="description"/>
                <field name="qty"/>
                <field name="image" widget="image" options="{'size':[0,60]}"/>
            </tree>
        </field>
    </record>

    <!-- Action-->
    <record id="action_hotel_hotel" model="ir.actions.act_window">
        <field name="name">Hotels</field>
        <field name="res_model">tourism.hotel.hotel</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_hotel_room_facility" model="ir.actions.act_window">
        <field name="name">Hotels</field>
        <field name="res_model">tourism.hotel.room.facility</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Hotels -->
    <menuitem id="menu_hotel_hotel" name="Hotels" parent="menu_hotel_configuration" action="action_hotel_hotel"
              sequence="50"/>
    <menuitem id="menu_hotel_facility" name="Facilities" parent="menu_hotel_configuration"
              action="action_hotel_room_facility"
              sequence="50"/>


</odoo>
