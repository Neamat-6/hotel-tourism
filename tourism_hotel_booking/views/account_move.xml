<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_account_move_form_hotel_booking" model="ir.ui.view">
        <field name="name">account.move.form.hotel.booking</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="tourism_booking_id" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </xpath>
        </field>
    </record>


</odoo>