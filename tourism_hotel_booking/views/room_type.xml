<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_tree_hotel_room_type" model="ir.ui.view">
        <field name="name">hotel.room.type.tree</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hotel_id"/>
            </tree>
        </field>
    </record>

    <record id="view_form_hotel_room_type" model="ir.ui.view">
        <field name="name">hotel.room.type.form</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Standard"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hotel_id"/>
                        </group>
                        <group>
                            <field name="default_number_of_guest"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_room_types" model="ir.actions.act_window">
        <field name="name">Room Types</field>
        <field name="res_model">hotel.room.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Floor -->
<!--    <menuitem id="menu_hotel_room_types" name="Room Types" parent="menu_hotel_configuration" action="action_hotel_room_types" sequence="130"/>-->


</odoo>