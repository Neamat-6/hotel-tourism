<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.report" id="action_booking_tree_report">
            <field name="name">Bookings</field>
            <field name="model">tourism.hotel.booking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tourism_hotel_booking.booking_tree_report</field>
            <field name="report_file">tourism_hotel_booking.booking_tree_report</field>
            <field name="binding_model_id" ref="model_tourism_hotel_booking"/>
            <field name="binding_type">report</field>
            <field name="binding_view_types">list</field>
        </record>
        <template id="booking_tree_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <style>
                            table.GeneratedTable {
                            width: 100%;
                            background-color: #ffffff;
                            border-collapse: collapse;
                            border-width: 2px;
                            border-color: #121212;
                            border-style: solid;
                            color: black;
                            }

                            table.GeneratedTable td, table.GeneratedTable th {
                            padding: 3px;
                            color: black;
                            }
                            table.GeneratedTable td.with-border, table.GeneratedTable th {
                            border-width: 2px;
                            border-color: #121212;
                            border-style: solid;
                            padding: 3px;
                            color: black;
                            text-align: center;
                            }

                            table.GeneratedTable thead {
                            background-color: #ffffff;
                            color: black;
                            }
                            .bold-text{font-weight: bold}
                        </style>
                        <table class="GeneratedTable">
                            <colgroup>
                                <col width='15%'/>
                                <col width='10%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='15%'/>
                                <col width='25%'/>
                                <col width='15%'/>
                                </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">Customer</th>
                                    <th class="text-center">Booking#</th>
                                    <th class="text-center">Check In</th>
                                    <th class="text-center">Check Out</th>
                                    <th class="text-center">Hotel</th>
                                    <th class="text-center">Room Type / MP</th>
                                    <th class="text-center">Status</th>
                                    </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="with-border">
                                            <span t-field="doc.partner_id"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.name"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.check_in"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.check_out"/>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.vendor_id"/>
                                        </td>
                                        <td class="with-border">
                                            <t t-foreach="doc.line_ids" t-as="room">
                                                <span t-field="room.count"/>

                                                <span t-field="room.room_id.name"/>
                                                <span t-field="room.meal_id"/>
                                                <div class="page_break"/>
                                            </t>
                                        </td>
                                        <td class="with-border">
                                            <span t-field="doc.state"/>
                                        </td>
                                    </tr>
                                </t>                            
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
