<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.actions.report" id="action_hotel_transportation_contract_report">
            <field name="name">Hotel Transportation Contract</field>
            <field name="model">hotel.transportation.contract</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tourism_hotel_booking.hotel_transportation_contract_temp</field>
            <field name="report_file">tourism_hotel_booking.hotel_transportation_contract_temp</field>
            <field name="binding_model_id" ref="tourism_hotel_booking.model_hotel_transportation_contract"/>
        </record>

            <template id="hotel_transportation_contract_temp">
                <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family:Arial,Helvetica,sans-serif !important;">
                        <t t-foreach="docs" t-as="doc">

                            <div class="row">
                                <div class="col-6">
                                    <strong>Contract Name</strong>
                                    <span t-field="doc.name"/>
                                </div>
                                <t t-if="doc.contract_type == 'purchase'">
                                    <div class="col-6">
                                        <strong>Travel Agent:</strong>
                                        <span t-field="doc.travel_agent_name.name"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="col-6">
                                        <strong>Customer:</strong>
                                        <span t-field="doc.partner_id.name"/>
                                    </div>
                                </t>
                            </div>
                            <br/>
                            <h4 class="text-center">Contract Package Lines</h4>
                            <table class="table table-sm table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Package</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.hotel_transportation_contract_lines" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.package_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.price"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>

                    </t>
                </t>
            </template>
    </data>
</odoo>