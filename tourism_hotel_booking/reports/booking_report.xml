                                        <!--                                     style="background-color:#893b74 !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; "> -->
                                        <!--                                     Invoicing and shipping address -->
                                        <!--                                 </th> -->
                                        <!--                                 <th width="20px" -->
                                        <!--                                     style="background-color:#893b74 !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important; "> -->
                                        <!--                                     Quotation Date -->
                                        <!--                                 </th> -->
                                        <th width="20px"
