<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data noupdate="1">

        <!--voucher-->
        <record model="ir.module.category" id="module_category_service_voucher">
            <field name="name">Service Voucher</field>
            <field name="sequence">0</field>
        </record>

        <record id="group_voucher_user" model="res.groups">
            <field name="name">Voucher User</field>
            <field name="category_id" ref="tourism_hotel_booking.module_category_service_voucher"/>
        </record>


        <!-- Portal Access Rules -->
        <record id="mail_message_rule_portal" model="ir.rule">
            <field name="name">Portal Show Own Messages Only</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('partner_ids','child_of',[user.commercial_partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="group_sale_hotel_transportation_contract" model="res.groups">
            <field name="name">Sale Transportation Contract</field>
        </record>

        <record id="group_purchase_hotel_transportation_contract" model="res.groups">
            <field name="name">Purchase Transportation Contract</field>
        </record>

    </data>

</odoo>