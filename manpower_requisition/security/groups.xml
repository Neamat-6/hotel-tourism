<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_manpower">
            <field name="name">HR Manpower</field>
        </record>

        <record id="group_hr_manpower_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_manpower"/>
        </record>
        <record id="group_hr_manpower_hr" model="res.groups">
            <field name="name">HR</field>
            <field name="category_id" ref="module_manpower"/>
        </record>
        <record id="group_hr_manpower_approver" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_manpower"/>
        </record>

        <record id="hr_manpower_rule_user_own" model="ir.rule">
            <field name="name">User own HR manpower</field>
            <field ref="manpower_requisition.model_manpower_requisition" name="model_id"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_manpower_user'))]"/>
        </record>
        <record id="hr_manpower_rule_manager" model="ir.rule">
            <field name="name">All HR manpower</field>
            <field ref="manpower_requisition.model_manpower_requisition" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_manpower_approver')), (4, ref('group_hr_manpower_hr'))]"/>
        </record>
    </data>
</odoo>