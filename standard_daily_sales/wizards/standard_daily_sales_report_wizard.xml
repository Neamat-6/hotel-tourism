<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- create from view -->
  <record id="standard_daily_sales_report_form" model="ir.ui.view">
    <field name="name">standard_daily_sales.report.form</field>
    <field name="model">standard.daily.sales.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Standard Daily Sales Report">
        <group>
          <field name="today_date" />
        </group>
        <footer>
          <button name="action_generate_report" string="Print xlsx" type="object"
            class="btn-primary" />
          <button string="Cancel" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <!-- create action -->
  <record id="standard_daily_sales_report_action" model="ir.actions.act_window">
    <field name="name">Standard Daily Sales Report</field>
    <field name="res_model">standard.daily.sales.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="standard_daily_sales_report_form" />
    <field name="target">new</field>
  </record>

  <!-- create menu -->
  <menuitem id="standard_daily_sales_report_menu" name="Standard Daily Sales Report"
    parent="hotel_booking.booking_reports_root_front_office"
    sequence="25"
    action="standard_daily_sales_report_action" />

</odoo>