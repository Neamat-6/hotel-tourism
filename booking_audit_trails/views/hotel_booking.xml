<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="audit_view_form_hotel_booking" model="ir.ui.view">
            <field name="name">audit_view_form_hotel_booking</field>
            <field name="model">hotel.booking</field>
            <field name="inherit_id" ref="hotel_booking.view_form_hotel_booking"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="audit" string="Audit Trails">
                        <field name="audit_trails" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="operation"/>
                                <field name="user_id"/>
                                <field name="datetime"/>
                                <field name="folio_id"/>
                                <field name="notes"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="operation"/>
                                    <field name="user_id"/>
                                    <field name="datetime"/>
                                    <field name="folio_id"/>
                                    <field name="notes"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>