<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="audit_view_form_hotel_room" model="ir.ui.view">
            <field name="name">audit_view_form_hotel_room</field>
            <field name="model">hotel.room</field>
            <field name="inherit_id" ref="hotel_booking.view_form_hotel_room"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="audit" string="Audit Trails">
                        <field name="audit_trail_ids">
                            <tree editable="bottom">
                                <field name="room_id" readonly="1" force_save="1"/>
                                <field name="operation" readonly="1" force_save="1"/>
                                <field name="user_id" readonly="1" force_save="1"/>
                                <field name="datetime" readonly="1" force_save="1"/>
                                <field name="notes" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>