<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="audit_trails_report_view_form" model="ir.ui.view">
            <field name="name">audit_trails_report_view_form</field>
            <field name="model">audit.trails.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="user_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="room_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                                <field name="operation"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-7">
                                <button name="button_search" type="object" string="Search" class="oe_highlight" icon="fa-search"/>
                            </div>
                        </div>
                        <field name="line_ids">
                            <tree create="0" edit="0" delete="0">
                                <field name="booking_id"/>
                                <field name="folio_id"/>
                                <field name="user_id"/>
                                <field name="user_id"/>
                                <field name="operation"/>
                                <field name="datetime"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="print_pdf" type="object" string="Print" icon="fa-file-pdf-o"/>
                        <button name="print_xlsx" type="object" string="Export" icon="fa-file-excel-o"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="audit_trails_report_action" model="ir.actions.act_window">
            <field name="name">Audit Trails</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.trails.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="audit_trails_report_menu" name="Audit Trails" parent="hotel_booking.booking_reports_root_accounting" action="audit_trails_report_action" sequence="4"/>

        <menuitem id="audit_trails_report_menu_item" name="Audit Trails" parent="hotel_booking.booking_reports_root_accounting_menu_item" action="audit_trails_report_action" sequence="4"/>
    </data>
</odoo>