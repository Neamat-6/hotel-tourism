<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ntmp_view_form_room_type" model="ir.ui.view">
            <field name="name">ntmp_view_form_room_type</field>
            <field name="model">room.type</field>
            <field name="inherit_id" ref="hotel_booking.view_form_room_type"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='max_children']" position="after">
                    <field name="ntmp_room_type_id" options="{'no_open': true, 'no_edit': true, 'no_create': true}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>