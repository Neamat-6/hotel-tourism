<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="os_theme_butterfly.Zoom" owl="1">
        <li class="os-zoom">
            <a class="toggle tipinfo" t-ref="zoom_btn" data-target="zoomContent"
               href="#"
               data-tippy-content="Zoom In/ Zoom Out" data-tippy-placement="left"
               aria-label="Zoom In/ Zoom Out">
                <em class="icon osi osi-zoom-in"/>
            </a>
        </li>
    </t>
    <t t-name="os_theme_butterfly.ZoomContent" owl="1">
        <div class="zoom-panel card bg-lighter p-2 shadow-lg toggle-slide toggle-slide-right" data-content="zoomContent" data-toggle-overlay="false" data-toggle-body="true" data-toggle-screen="any">
            <div class="d-flex align-items-center">
                <div class="pl-2" t-ref="btn_zoom_percentage">100%</div>
                <div class="d-flex align-items-center mx-2">
                    <button class="btn btn-small btn-info mr-2" t-on-click="onZoomOut" t-ref="btn_zoom_out"><i class="osi osi-minus"/></button>
                    <button class="btn btn-small btn-info" t-on-click="onZoomIn" t-ref="btn_zoom_in"><i class="osi osi-plus"/></button>
                </div>
                <button class="osi osi-redo btn btn-dark" t-on-click="onZoomReset"/>
            </div>
        </div>
    </t>

</templates>
