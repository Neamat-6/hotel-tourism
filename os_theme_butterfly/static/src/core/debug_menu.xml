<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.DebugMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//Dropdown" position="replace">
            <OS_Dropdown
                    class="o_debug_manager"
                    beforeOpen="getElements"
                    position="'bottom-end'"
                    menuClass="'dropdown-menu-md dropdown-menu-end dropdown-menu-s1'"
                    togglerClass="`o-dropdown--narrow os-quick-nav-icon ${env.inDialog?'btn btn-link':''}`">
                    <t t-set-slot="toggler">
                        <div class="icon-status icon-status-na">
                            <em class="icon osi osi-bugs"/>
                        </div>
                    </t>

                    <t t-foreach="elements" t-as="element" t-key="element_index">
                        <DropdownItem
                                t-if="element.type == 'item'"
                                t-on-dropdown-item-selected.stop="element.callback"
                                href="element.href"
                                t-esc="element.description"/>
                        <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                        <t t-if="element.type == 'component'" t-component="element.Component" t-props="element.props"/>
                    </t>
            </OS_Dropdown>
        </xpath>
    </t>
</templates>
