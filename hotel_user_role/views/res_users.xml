
<odoo>
    <data>
        <record id="view_users_form_inherit_role_type" model="ir.ui.view">
            <field name="name">res.users.form.inherit.role.type</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!-- Add role_type field after the 'groups_id' field -->
                <xpath expr="//notebook/page[@name='access_rights']/group" position="after">
                    <group>
                    <field name="role_type" placeholder="Select Role" options="{'no_create': True}" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
