<odoo>
  <data>
<record id="view_purchase_order_form" model="ir.ui.view">
    <field name="name">purchase.order.form.approvals</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='button_cancel']" position="attributes">
        <attribute name="states">draft,first_approval,second_approval,to approve,sent,purchase</attribute>
      </xpath>
      <xpath expr="//button[@id='draft_confirm']" position="attributes">
          <attribute name="states">second_approval</attribute>
      </xpath>
        <xpath expr="//button[@name='action_rfq_send']" position="attributes">
            <attribute name="states">second_approval</attribute>
        </xpath>
      <xpath expr="//field[@name='state']" position="attributes">
        <attribute name="statusbar_visible">draft,first_approval,second_approval,sent,purchase</attribute>
      </xpath>
        <xpath expr="//button[@id='draft_confirm']" position="before">
                <button name="action_first_approval" string="First Approval" type="object"
                        class="oe_highlight" states="draft"/>
                <button name="action_second_approval" string="Second Approval" type="object"
                        class="oe_highlight" states="first_approval"/>
        </xpath>
    </field>
</record>
  </data>
</odoo>