<odoo>
  <data>

  <record model="ir.actions.server" id="action_update_product_tax">
          <field name="name">Delete Product Tax</field>
          <field name="model_id" ref="model_product_template"/>
          <field name="binding_type">action</field>
          <field name="state">code</field>
          <field name="code">
if records:
    records.delete_product_tax()
          </field>
        </record>
    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product_template_tree_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="taxes_id" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"
                       optional="show" domain="[('type_tax_use', '=', 'sale')]"/>
            </xpath>

        </field>
    </record>
  </data>
</odoo>