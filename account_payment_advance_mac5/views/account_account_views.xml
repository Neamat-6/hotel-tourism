<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_list" model="ir.ui.view">
        <field name="name">account.account.payment.advance.view.tree</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <field name="reconcile" position="before">
                <field name="user_type_id" invisible="1"/>
                <field name="used_for_advance_payment" widget="boolean_toggle"/>
            </field>
        </field>
    </record>

    <record id="account_form_inherit_view" model="ir.ui.view">
        <field name="name">view_account_form_inh</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_type_id']" position="after">
                <field name="used_for_advance_payment" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>


</odoo>
