<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="eg_folio_view_form" model="ir.ui.view">
            <field name="name">eg_folio_view_form</field>
            <field name="model">booking.folio</field>
            <field name="inherit_id" ref="hotel_booking_folio.folio_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_municipality']" position="after">
                    <field name="price_service_tax"/>
                </xpath>
                <xpath expr="//field[@name='service_price_municipality']" position="after">
                    <field name="service_price_service_tax"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>