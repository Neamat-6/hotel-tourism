<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="account_configuration_view_tree" model="ir.ui.view">
            <field name="name">htask.account.configuration.view.tree</field>
            <field name="model">htask.account.configuration</field>
            <field name="arch" type="xml">
                <tree string="Accounts" create="0" delete="0" edit="0">
                    <field name="htask_type_id" />
                    <field name="htask_account" />
                    <field name="account_id" />
                    <field name="product_id" />
                </tree>
            </field>
        </record>

        <record id="account_type_view_tree" model="ir.ui.view">
            <field name="name">htask.account.type.view.tree</field>
            <field name="model">htask.account.type</field>
            <field name="arch" type="xml">
                <tree string="Account Types" create="0" delete="0" edit="0">
                    <field name="name" />
                    <field name="htask_ref" />
                    <field name="initial_code" />
                </tree>
            </field>
        </record>

        <record id="account_configuration_action" model="ir.actions.act_window">
            <field name="name">Accounts</field>
            <field name="res_model">htask.account.configuration</field>
            <field name="view_id" ref="account_configuration_view_tree"/>
            <field name="view_mode">tree</field>
        </record>

        <record id="account_type_action" model="ir.actions.act_window">
            <field name="name">Account Types</field>
            <field name="res_model">htask.account.type</field>
            <field name="view_id" ref="account_type_view_tree"/>
            <field name="view_mode">tree</field>
        </record>


        <menuitem id="menu_account_configuration" name="Accounts" action="account_configuration_action" parent="htask_connector.menu_htask_connector_config" sequence="1" />

        <menuitem id="menu_account_type" name="Account Types" action="account_type_action" parent="htask_connector.menu_htask_connector_config" sequence="2" />

    </data>
</odoo>
