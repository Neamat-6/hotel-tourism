<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record model="ir.rule" id="booking_package_portal_rule">
        <field name="name">Booking Package Portal</field>
        <field name="model_id" ref="model_booking_package"/>
        <field name="domain_force">[('partner_ids', 'in', user.partner_id.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <record id="rule_partner_portal_write" model="ir.rule">
        <field name="name">Allow Portal Users to Edit Main Member</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[('id', 'in', user.partner_id.package_id.partner_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>
    </data>
</odoo>