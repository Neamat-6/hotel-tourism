<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record model="ir.rule" id="booking_package_portal_rule">
        <field name="name">Booking Package Portal</field>
        <field name="model_id" ref="model_booking_package"/>
        <field name="domain_force">[('partner_ids', 'in', user.partner_id.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <record id="rule_partner_portal_write" model="ir.rule">
        <field name="name">Allow Portal Users to Edit Main Member</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[('id', 'in', user.partner_id.package_id.partner_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

        <record id="flight_ticket_comp_rule" model="ir.rule">
            <field name="name">flight ticket company rule</field>
            <field name="model_id" ref="model_flight_ticket"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="visa_contract_comp_rule" model="ir.rule">
            <field name="name">visa contract company rule</field>
            <field name="model_id" ref="model_visa_contract"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="transportation_contract_comp_rule" model="ir.rule">
            <field name="name">transportation contract company rule</field>
            <field name="model_id" ref="model_transportation_contract"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="contract_booking_comp_rule" model="ir.rule">
            <field name="name">contract booking company rule</field>
            <field name="model_id" ref="model_contract_booking"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>