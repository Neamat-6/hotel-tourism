<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hajj_view_company_form" model="ir.ui.view">
            <field name="name">hajj_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="button_create_hotel_data" type="object" string="Create Hotel Data" class="oe_highlight"
                    attrs="{'invisible': [('related_hotel_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//notebook" position="before">
                    <group>
                        <group>
                            <field name="hotel_type"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>