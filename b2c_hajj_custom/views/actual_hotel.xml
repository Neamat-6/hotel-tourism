<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="actual_hotel_view_tree" model="ir.ui.view">
            <field name="name">actual_hotel_view_tree</field>
            <field name="model">actual.hotel</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="name"/>
                    <field name="hotel_id"/>
                </tree>
            </field>
        </record>

        <record id="actual_hotel_view_form" model="ir.ui.view">
            <field name="name">actual_hotel_view_form</field>
            <field name="model">actual.hotel</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                        </group>
                            <group>
                                <field name="hotel_id" options="{'no_create':True, 'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="actual_hotel_search_view" model="ir.ui.view">
           <field name="name">actual_hotel_search_view</field>
           <field name="model">actual.hotel</field>
            <field name="arch" type="xml">
                <search string="">
                  <field name="name" string="Name"/>
                  <field name="hotel_id" string="Hotel"/>
                  <filter name="Hotel" string="Hotel" domain="[]" context="{'group_by' : 'hotel_id'}"/>

                </search>
           </field>
        </record>

        <record id="actual_hotel_action" model="ir.actions.act_window">
            <field name="name">Actual Hotel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">actual.hotel</field>
            <field name="view_mode">tree,form</field>
        </record>

                <!-- This Menu Item must have a parent and an action -->
        <menuitem id="actual_hotel_menu" name="Actual Hotel"
                  parent="b2c_hajj_custom.booking_config_menuitem"
                  action="b2c_hajj_custom.actual_hotel_action"
                  sequence="2"/>


    </data>
</odoo>