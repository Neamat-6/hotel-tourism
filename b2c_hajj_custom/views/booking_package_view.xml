<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="booking_package_form_view" model="ir.ui.view">
        <field name="name">booking.package.form.view</field>
        <field name="model">booking.package</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_create_bookings" type="object" string="Create Bookings" class="oe_highlight"
                            attrs="{'invisible': [('allow_booking', '=', False)]}"
                    />
                    <button name="button_update_bookings" type="object" string="Update Bookings" class="oe_highlight"
                            attrs="{'invisible': [('state','!=','confirmed')]}"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_bookings" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('booking_count', '=', 0)]}">
                            <field name="booking_count" widget="statinfo" string="Bookings"/>
                        </button>
                        <button name="action_view_pilgrims" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('partner_count', '=', 0)]}">
                            <field name="partner_count" widget="statinfo" string="Pilgrims"/>
                        </button>
                    </div>
                    <div class="oe_title oe_inline">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Package"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="package_code"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="guide_ids" context="{'default_is_guide': True}" widget="many2many_tags"
                                   required="1"/>
                            <field name="package_closing_date"/>
                            <field name="allow_booking" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Flight Contracts">
                            <group>
                                <field name="flight_contract_lines" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="flight_contract_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                        <field name="booked_no" force_save="1"/>
                                        <field name="available_no" force_save="1"/>
                                        <field name="sale_price"/>
                                        <field name="purchase_price"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="flight_sale_price"/>
                                    <field name="flight_purchase_price"/>
                                </group>
                            </group>
                        </page>
