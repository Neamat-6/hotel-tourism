<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hotel_contract_form_view" model="ir.ui.view">
        <field name="name">hotel_contract_form_view</field>
        <field name="model">hotel.contract.management</field>
        <field name="arch" type="xml">
            <form string="Contract Management">
                <header>
                    <field name="generate_room" invisible="1"/>
                    <button string="Confirm" type="object" name="action_confirm"
                            attrs="{'invisible': [('state', 'in', ['confirm', 'po_created'])]}"/>
                    <button string="Create Purchase Order" type="object" name="button_create_purchase_order"
                            attrs="{'invisible': [('state', 'in', ['draft', 'po_created'])]}"/>
                    <button string="Generate Rooms" type="object" name="button_generate_rooms"
                            groups="b2c_hajj_custom.hotel_generated_room"
                            attrs="{'invisible': ['|',('state', '!=', 'po_created'),('generate_room', '=', True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,po_created"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Contract Code" required="1"
                                   attrs="{'readonly': [('state', '=', 'po_created')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hotel_id" options="{'no_create': True}"/>
                            <field name="hotel" options="{'no_create': True}"/>
                            <field name="vendor"
                                   attrs="{'readonly': [('state', '=', 'po_created')]}"/>
                            <field name="company_id" readonly="1"/>
                            <field name="currency_id"/>

                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="total_nights"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="booking_no"/>
                            <field name="purchase_order_id" readonly="1"/>
<!--                            <field name="start"/>-->
<!--                            <field name="count"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Hotel Lines">
                            <field name="line_ids" attrs="{'readonly': [('state', '=', 'po_created')]}">
                                <tree editable="bottom">
                                    <field name="room_type_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="floor_id"/>
                                    <field name="start" optional="hide"/>
                                    <field name="count"/>
                                    <field name="booked_count"/>
                                    <field name="unit_price"/>
                                    <field name="total_nights"/>
                                    <field name="total" sum="total"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="hotel_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_contract_tree_view" model="ir.ui.view">
        <field name="name">hotel.contract.tree.view</field>
        <field name="model">hotel.contract.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hotel_id"/>
                <field name="hotel"/>
                <field name="vendor"/>
                <field name="company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="booking_no"/>
                <field name="purchase_order_id"/>
            </tree>
        </field>
    </record>


    <record id="hotel_contract_management_search_view" model="ir.ui.view">
       <field name="name">hotel_contract_management_search_view</field>
       <field name="model">hotel.contract.management</field>
        <field name="arch" type="xml">
            <search string="">
            <field name="name"/>
            <field name="booking_no"/>
            <field name="purchase_order_id"/>
            <filter string="Hotel Category" name="hotel_id" domain="[]" context="{'group_by': 'hotel_id'}"/>
            <filter string="Hotel" name="hotel" domain="[]" context="{'group_by': 'hotel'}"/>
            <filter string="Supplier" name="vendor" domain="[]" context="{'group_by': 'vendor'}"/>
            <filter string="Company" name="company_id" domain="[]" context="{'group_by': 'company_id'}"/>
            <filter name="filter_date_from" date="date_from"/>
            <filter name="filter_date_to" date="date_to"/>
            <filter name="group_by_date_from" domain="[]" context="{'group_by':'date_from'}"/>
            <filter name="group_by_date_to" domain="[]" context="{'group_by':'date_to'}"/>

        </search>
       </field>
    </record>


    <record id="hotel_contract_action_view" model="ir.actions.act_window">
        <field name="name">Hotel Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.contract.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hotel_contract_menu" name="Hotel Contract" parent="booking_config_menuitem"
              action="hotel_contract_action_view"
              sequence="20"/>


    <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="booking_no"/>
            </xpath>

        </field>
    </record>
</odoo>