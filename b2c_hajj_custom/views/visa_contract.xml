<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="visa_contract_tree_view" model="ir.ui.view">
        <field name="name">visa.contract.tree.view</field>
        <field name="model">visa.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_type"/>
                <field name="expiry_date"/>
                <field name="pilgrims_no"/>
                <field name="booked_no"/>
                <field name="available_no"/>
                <field name="unit_price"/>
                <field name="total"/>
                <field name="purchase_id"/>
            </tree>
        </field>
    </record>

    <record id="visa_contract_form_view" model="ir.ui.view">
        <field name="name">visa.contract.form.view</field>
        <field name="model">visa.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_purchase_order" type="object" string="Create Purchase Order" states="draft"
                            class="btn-primary"/>
                    <button name="action_reset_to_draft" type="object" string="Reset To Draft" states="confirm"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pilgrims" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('partner_count', '=', 0)]}">
                            <field name="partner_count" widget="statinfo" string="Pilgrims"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="contract_type"/>
                            <field name="partner_id"/>
                            <field name="unit_price" required="1"/>
                            <field name="currency_id" required="1"/>
                            <field name="purchase_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="pilgrims_no" required="1"/>
                            <field name="booked_no"/>
                            <field name="available_no"/>
                            <field name="expiry_date"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="total"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="visa_contract_action_view" model="ir.actions.act_window">
        <field name="name">Visa Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">visa.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="visa_contract_menu" name="Visa Contract" parent="booking_config_menuitem"
              action="visa_contract_action_view" sequence="7"/>
</odoo>