<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="transportation_contract_tree_view" model="ir.ui.view">
        <field name="name">transportation.contract.tree.view</field>
        <field name="model">transportation.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="transportation_company"/>
                <field name="transportation_contract_no"/>
                <field name="pilgrims_no"/>
                <field name="booked_no"/>
                <field name="available_no"/>
                <field name="cost_price"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="transportation_contract_form_view" model="ir.ui.view">
        <field name="name">transportation.contract.form.view</field>
        <field name="model">transportation.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="purchase_order_id" invisible="1"/>
                    <button string="Create Purchase Order" type="object" name="button_create_purchase_order"
                        attrs="{'invisible': [('purchase_order_id', '!=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pilgrims" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('partner_count', '=', 0)]}">
                            <field name="partner_count" widget="statinfo" string="Pilgrims"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="transportation_company"/>
                            <field name="pilgrims_no"/>
                            <field name="available_no"/>
                            <field name="company_id"/>
                            <field name="purchase_order_id"/>
                        </group>
                        <group>
                            <field name="transportation_contract_no"/>
                            <field name="booked_no"/>
                            <field name="cost_price"/>
                            <field name="expiry_date"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="total"/>
                        </group>
                    </group>
                    <group string="Locations">
                        <field name="location_lines" nolabel="1">
                            <tree editable="bottom">
                                <field name="from_location"/>
                                <field name="to_location"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="transportation_contract_search" model="ir.ui.view">
       <field name="name">transportation_contract_search</field>
       <field name="model">transportation.contract</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="transportation_contract_no"/>
                <filter name="filter_date" date="expiry_date"/>
                <filter string="Transportation Company" name="transportation_company" domain="[]" context="{'group_by': 'transportation_company'}"/>
                <filter name="group_by_expiry_date" domain="[]" context="{'group_by':'expiry_date'}"/>

        </search>
       </field>
    </record>

    <record id="transportation_contract_action_view" model="ir.actions.act_window">
        <field name="name">Transportation Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">transportation.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="transportation_contract" name="Transportation Contract" parent="booking_config_menuitem"
              action="transportation_contract_action_view" sequence="6"/>
</odoo>