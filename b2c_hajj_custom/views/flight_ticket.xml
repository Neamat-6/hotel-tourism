<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="flight_ticket_view_form" model="ir.ui.view">
            <field name="name">flight_ticket_view_form</field>
            <field name="model">flight.ticket</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <header>
                        <field name="bill_id" invisible="1"/>
                    <button name="action_create_invoices" string="Flight Ticket" type="object" class="oe_highlight"
                            states="draft"/>
                    <button name="create_vendor_bill" string="Create Bill" type="object" class="oe_highlight"
                        attrs="{'invisible':[('bill_id', '!=', False)]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                            states="hotel_confirm"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="hotel_confirm"
                            class="btn-secondary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,hotel_confirm"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_invoice" type="object" class="oe_stat_button"
                                    icon="fa-credit-card">
                                <div class="o_stat_info">
<!--                                    <field name="total_cost" class="o_stat_value"/>-->
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                            <button name="action_open_bill" type="object" class="oe_stat_button"
                                    icon="fa-credit-card">
                                <div class="o_stat_info">
<!--                                    <field name="total_cost" class="o_stat_value"/>-->
                                    <span class="o_stat_text">Bill</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="sale_price" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="no_ticket"/>
                            </group>
                            <group>
                                <field name="vendor_id"/>
                                <field name="purchase_price" />
                            </group>
                        </group>
                        <group>
                        <group string="Arrival">
                            <field name="arrival_flight_no"/>
                            <field name="arrival_date"/>
                            <field name="departure_airport_arrival_id"/>
                            <field name="arrival_airport_id"/>
                            <field name="arrival_hall_no"/>
                        </group>
                        <group string="Departure">
                            <field name="departure_flight_no"/>
                            <field name="departure_date"/>
                            <field name="departure_airport_id"/>
                            <field name="arrival_airport_dep_id"/>
                            <field name="departure_hall_no"/>
                        </group>
                    </group>
                    </sheet>
                   <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="flight_ticket_view_tree" model="ir.ui.view">
            <field name="name">flight_ticket_view_tree</field>
            <field name="model">flight.ticket</field>
            <field name="arch" type="xml">
                <tree string="flight_ticket_tree">
                    <field name="customer_id"/>
                    <field name="vendor_id"/>
                    <field name="sale_price"/>
                    <field name="purchase_price"/>
                    <field name="no_ticket"/>
                </tree>
            </field>
        </record>

        <record id="flight_ticket_view_search" model="ir.ui.view">
            <field name="name">flight.ticket.search</field>
            <field name="model">flight.ticket</field>
            <field name="arch" type="xml">
                <search string="flight ticket">
                    <field name="customer_id"/>
                    <field name="vendor_id"/>
                    <filter string="Tentative Confirmation" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed Waiting Payment" name="hotel_confirm" domain="[('state', '=', 'hotel_confirm')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                </search>
            </field>
        </record>

        <record id="flight_ticket_action" model="ir.actions.act_window">
            <field name="name">Flight Ticket</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">flight.ticket</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="flight_ticket_menu" name="Flight Ticket" parent="b2c_hajj_custom.b2c_main_menu"
                  action="flight_ticket_action" sequence="11"/>
    </data>
</odoo>