<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_move_package_form" model="ir.ui.view">
            <field name="name">view_move_package_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']" position="inside">
                    <field name="package_id" attrs="{'invisible':[('move_type', '!=', 'out_invoice')],'readonly': [('state', '!=', 'draft')]}"
                           options="{'no_create': True}"/>
                </xpath>

            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">view_account_invoice_filter</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='status']" position="after">
                    <filter name="package" string="Package" context="{'group_by':'package_id'}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>