<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hajj_folio_view_form" model="ir.ui.view">
            <field name="name">hajj_folio_view_form</field>
            <field name="model">booking.folio</field>
            <field name="inherit_id" ref="hotel_booking.folio_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bed_ids']/tree" position="inside">
                    <field name="allowed_partner_ids" widget="many2many_tags" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>