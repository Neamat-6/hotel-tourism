<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="update_package_wizard_view_form" model="ir.ui.view">
        <field name="name">update_package_wizard_view_form</field>
        <field name="model">update.package.wizard</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <h3>Select Hotels Want To Update</h3>
                    <group>
                        <group>
                            <field name="makkah_hotel"/>
                            <field name="main_hotel"/>
                            <field name="minnah_hotel"/>
                        </group>
                        <group>
                            <field name="madinah_hotel"/>
                            <field name="arfa_hotel"/>
                            <field name="package_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="button_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
        <record id="action_update_package_wizard" model="ir.actions.act_window">
            <field name="name">Update Package</field>
            <field name="res_model">update.package.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>