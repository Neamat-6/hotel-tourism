<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="switch_bed_view_form" model="ir.ui.view">
            <field name="name">switch_bed_view_form</field>
            <field name="model">folio.switch.bed</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="allowed_room_ids" widget="many2many_tags" readonly="1" invisible="1" force_save="1"/>
                            <field name="allowed_guest_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                            <field name="guest1" readonly="1" force_save="1"/>
                            <field name="room_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="guest2" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_switch" type="object" string="Switch" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>