<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_pilgrim_booking_report" model="ir.actions.report">
        <field name="name">Pilgrim Booking Report</field>
        <field name="model">pilgrim.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">b2c_hajj_custom.report_pilgrim_booking</field>
        <field name="report_file">b2c_hajj_custom.report_pilgrim_booking</field>
        <field name="print_report_name">Pilgrim Booking</field>
        <field name="binding_model_id" ref="b2c_hajj_custom.model_pilgrim_booking"/>
        <field name="binding_type">report</field>
    </record>


        <template id="report_pilgrim_booking">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="b2c_hajj_custom.report_pilgrim_booking_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_pilgrim_booking_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <div class="page" style="font-family: Arial, Helvetica, sans-serif !important;">
                    <div class="oe_structure"/>
                    <h2 class="text-center">Pilgrim Booking</h2>
                    <p>
                        <strong>Partner:</strong> <span t-field="o.partner_id.name"/><br/>
                        <strong>Source:</strong> <span t-field="o.source"/><br/>
                        <strong>Package:</strong> <span t-field="o.package_id.package_code"/><br/>
                        <strong>Room Type:</strong> <span t-field="o.room_type"/><br/>
                        <strong>Pilgrim Count:</strong> <span t-field="o.pilgrim_count"/><br/>
                        <strong>sales Price:</strong> <span t-field="o.pilgrim_cost"/><br/>
                        <strong>Total Cost:</strong> <span t-field="o.total_cost"/><br/>
                    </p>

                    <t t-if="o.line_ids">
                        <h3>Pilgrim Details</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Pilgrim Type</th>
                                    <th>Main Member</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td t-esc="line.name"/>
                                        <td t-esc="line.gender"/>
                                        <td t-esc="line.pilgrim_type"/>
                                        <td t-esc="line.main_member_id.name"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="o.extra_lines">
                        <h3>Extra Services</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Extra Service</th>
                                    <th>Quantity</th>
                                    <th>Price Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.extra_lines" t-as="extra">
                                    <tr>
                                        <td t-esc="extra.extra_id.name"/>
                                        <td t-esc="extra.quantity"/>
                                        <td t-esc="extra.price_unit"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>

        </template>


    </data>
</odoo>