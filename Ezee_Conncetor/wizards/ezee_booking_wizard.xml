<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezee_booking_wizard_view_form" model="ir.ui.view">
            <field name="name">ezee_booking_wizard_view_form</field>
            <field name="model">ezee.booking.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="sub_booking_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="get_booking" type="object" string="Connect" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="ezee_booking_wizard_action" model="ir.actions.act_window">
            <field name="name">Get Ezee Booking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ezee.booking.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="ezee_booking_wizard_menu" name="Get Ezee Booking" parent="Ezee_Conncetor.ezee_config_menu"
                  action="ezee_booking_wizard_action" sequence="1"/>
    </data>
</odoo>