<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezee_view_form_hotel_hotel" model="ir.ui.view">
            <field name="name">ezee_view_form_hotel_hotel</field>
            <field name="model">hotel.hotel</field>
            <field name="inherit_id" ref="hotel_booking.view_form_hotel_hotel"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="ezee" string="Ezee">
                        <group>
                            <group>
                                <field name="enable_ezee"/>
                                <field name="ezee_base_url" attrs="{'invisible': [('enable_ezee', '=', False)], 'required': [('enable_ezee', '=', True)]}"/>
                                <field name="ezee_hotel_code" attrs="{'invisible': [('enable_ezee', '=', False)], 'required': [('enable_ezee', '=', True)]}"/>
                                <field name="ezee_api_key" attrs="{'invisible': [('enable_ezee', '=', False)], 'required': [('enable_ezee', '=', True)]}"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-3">
                                <button name="get_ezee_room_type" type="object" string="Get Room Types" class="oe_highlight" attrs="{'invisible': [('enable_ezee', '=', False)]}"/>
                            </div>
                            <div class="col-3">
                                <button name="get_ezee_extra_charge" type="object" string="Get Extra Charges" class="oe_highlight" attrs="{'invisible': [('enable_ezee', '=', False)]}"/>
                            </div>
                            <div class="col-3">
                                <button name="get_ezee_rate_plan" type="object" string="Get Rate Plans" class="oe_highlight" attrs="{'invisible': [('enable_ezee', '=', False)]}"/>
                            </div>
                        </div>
                        <group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>