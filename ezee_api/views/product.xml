<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezee_product_template_form_view" model="ir.ui.view">
            <field name="name">ezee_product_template_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="room_charge_product"/>
                    <field name="municipality_product"/>
                    <field name="extra_charge_product"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>