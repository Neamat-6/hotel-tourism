<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezee_view_move_form" model="ir.ui.view">
            <field name="name">ezee_view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="ezee_unique_id" readonly="1" force_save="1"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_account_ezee_form" model="ir.ui.view">
            <field name="name">view_account_ezee_form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='deprecated']" position="before">
                    <field name="ezee_api"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">view.account.journal.forminherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="ezee_journal_type"/>
                    <field name="ezee_api"/>
                </xpath>
            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="ezee_view_company_form" model="ir.ui.view">
            <field name="name">ezee_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="Ezee" string="Ezee Connector">
                        <group>
                            <field name="auth_code"/>
                            <field name="hotel_code"/>
                            <field name="max_try"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="ir_logging_form_view" model="ir.ui.view">
            <field name="name">ir_logging_form_view</field>
            <field name="model">ir.logging</field>
            <field name="inherit_id" ref="base.ir_logging_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='message']" position="after">
                    <field name="error"/>
                </xpath>
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button string="ReSync" name="resync_payload" type="object" class="btn btn-primary"/>
                    </header>
                </xpath>

            </field>
        </record>
    </data>
</odoo>